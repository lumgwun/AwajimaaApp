<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shop_DLayout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".Markets.ProductsAct">

    <include
        layout="@layout/app_bar_shop"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent" />


    <com.rom4ek.arcnavigationview.ArcNavigationView
        android:layout_width="match_parent"
        android:background="@drawable/rect_their_message"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:arc_cropDirection="cropOutside"
        app:arc_width="96dp"
        app:itemIconSize="20dp"
        android:layout_margin="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:itemShapeInsetStart="10dp"
        android:paddingVertical="20dp"
        app:itemHorizontalPadding="40dp"
        app:itemIconTint="@color/red_brown"
        app:itemTextColor="@color/white_good"
        android:layout_marginBottom="10dp"
        app:itemBackground="@drawable/rect_my_message"
        app:itemTextAppearance="@style/TextAppearance.AppCompat.Headline"
        android:stateListAnimator="@anim/raise"
        android:id="@+id/nav_viewShop"
        app:headerLayout="@layout/tool_bar_product"
        android:fitsSystemWindows="true"
        app:menu="@menu/shope_nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>