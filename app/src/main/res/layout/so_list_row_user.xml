<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="#fff"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/so_l11"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_height="wrap_content">
                    <com.mikepenz.materialdrawer.view.BezelImageView
                        android:layout_width="120dp"
                        android:id="@+id/so_status_pic3"
                        android:src="@drawable/transaction2"
                        android:layout_height="90dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/so_id3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_marginTop="10dp"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textStyle="bold"
                        android:text="Sky-SO-0089"
                        android:textColor="#f00"
                        android:textSize="15sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/so_acctNo4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Acct No:980564"
                        android:textAlignment="textStart"
                        android:gravity="start"
                        android:textColor="#f00"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/so_amount5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Amonut:NGN6,000"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        android:textColor="#f00"
                        android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:id="@+id/so_l12"
                android:weightSum="2"
                android:padding="10dp"
                android:layout_below="@id/so_l11"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/so_exp_amount4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="EXP: NGN900,000"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/so_received4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Recd:NGN750,000"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/so_l13"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:weightSum="2"
                android:layout_below="@id/so_l12"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/so_diff4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:text="Diff: NGN2000"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/so_status4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Uncompleted"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/so_l14"
                android:weightSum="2"
                android:padding="10dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_below="@id/so_l13"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/so_start4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Start Date:23/03/2021"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/so_end_Date4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="End Date: 22/04/2021"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/so_l14"
                android:weightSum="2"
                android:padding="10dp"
                android:id="@+id/l_btn"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_action_request"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:text="Action"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    android:textColor="#f00"
                    android:src="@drawable/shape_rect12"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:scaleType="fitXY" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_more"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:text="More"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:textColor="#f00"
                    android:src="@drawable/shape_rect12"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:scaleType="fitXY" />



            </LinearLayout>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>