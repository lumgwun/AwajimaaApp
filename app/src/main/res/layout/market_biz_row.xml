<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/rect11"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:clickable="true"
        card_view:showDividers="middle"
        card_view:dividerPadding="10dp"
        card_view:divider="@drawable/shape_toolbar_dropshadow"
        android:focusable="true"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/p_14"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mb_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:paddingStart="8dp"
                    android:text="Biz Name:"
                    android:paddingEnd="16dp"
                    android:layout_weight="1"
                    android:paddingTop="16dp"
                    android:textAlignment="center"
                    android:textColor="#111"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/thumbnail_"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_gravity="end"
                    android:focusable="true"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingTop="16dp"
                    android:src="@drawable/verified3"
                    android:scaleType="fitXY"
                    android:contentDescription="Report" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/p_1"
                android:layout_below="@+id/p_14"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/thumbnail_mb"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/savings"
                    android:scaleType="fitXY"
                    android:contentDescription="Report" />

                <TextView
                    android:id="@+id/type_mb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:paddingStart="8dp"
                    android:text="Biz Type"
                    android:paddingEnd="2dp"
                    android:paddingTop="16dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_1"
                android:id="@+id/p_0"
                android:weightSum="1"
                android:visibility="visible"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mb_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:text="Biz Desc:"
                    android:textColor="@color/dark_and_red"
                    android:textSize="15sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/p_2"
                android:weightSum="1"
                android:layout_below="@id/p_0"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mb_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Biz State:"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textColor="#111"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_2"
                android:id="@+id/p_3"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mb_date_joined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="Date Joined"
                    android:padding="10dp"
                    android:textColor="@color/dark_and_red"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_3"
                android:id="@+id/p_34"
                android:weightSum="1"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mb_market_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Market ID:"
                    android:paddingBottom="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_34"
                android:id="@+id/p_4"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mb_revenue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:text="Revenue:"
                    android:textColor="@color/dark_and_red"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>