<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rect_their_message"
    android:layout_height="match_parent"
    tools:context=".Transactions.OurAppBankTransfer">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bankLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_rect13"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:id="@+id/loanBank"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="Select Bank"
            android:layout_marginStart="2dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="0dp"
            android:entries="@array/Banks"
            android:id="@+id/selected_bank_account"
            android:layout_weight="2"
            android:padding="20dp"
            android:background="@drawable/rect6g"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:background="@drawable/rect6g"
            android:padding="20dp"
            android:hint="Account Name"
            android:id="@+id/_deposit_account_name"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:id="@+id/_deposit_account_no"
            android:background="@drawable/rect6g"
            android:padding="20dp"
            android:inputType="number"
            android:hint="Account Number"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:id="@+id/bank_deposit_amount"
            android:background="@drawable/rect6g"
            android:padding="20dp"
            android:inputType="number"
            android:hint=" Amount"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:id="@+id/_deposit_account_submit"
        android:text="Submit"
        android:layout_marginTop="20dp"
        android:padding="30dp"
        android:background="@drawable/rect6d"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>