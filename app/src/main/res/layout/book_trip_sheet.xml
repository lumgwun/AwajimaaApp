<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/sheet_book_L"
    android:visibility="gone"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_height="match_parent"
    tools:context="com.skylightapp.Bookings.TripDetailAct">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-30dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardBackgroundColor="@color/black_instead_blur"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:scrollbarStyle="insideInset"
            android:scrollbarSize="5dp"
            android:id="@+id/pswdUserName"
            android:background="@drawable/rect_their_message"
            android:scrollIndicators="right"
            android:scrollbars="vertical"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="50dp"
                android:layout_gravity="end"
                android:id="@+id/close_sheet"
                android:src="@drawable/ic_close"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rect_their_message"
                android:layout_height="50dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/seats_rem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:text="5 seats remaining"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/dark_green" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/amt_per_sit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:text="Amount per seat"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/dark_green" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_no_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:textColorHint="@color/purple_500"
                android:padding="20dp"
                android:autofillHints="username"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rect6h"
                android:hint="No of seat to book"
                android:inputType="number"
                android:textAlignment="center" />
            <!-- What is this ' 0.503 number? -->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sumit_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Submit"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/dark_green"
                android:padding="20dp"
                android:background="@drawable/shape_layer_3b" />


        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.LinearLayoutCompat>