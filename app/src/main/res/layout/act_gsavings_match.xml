<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rect66"
    android:layout_height="match_parent"
    tools:context=".GSavingsMatchAct">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/TextQ1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/proxima_nova_semibold"
        android:textSize="17sp"
        android:layout_marginBottom="20dp"
        android:text="My Preference for Selecting Group Savings"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_semibold"
                android:textSize="18sp"
                android:text="minimum_Duration"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/match_value_preference_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:fontFamily="@font/proxima_nova_semibold"
                android:textSize="18sp"
                tools:text="6"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            app:cardElevation="1dp"
            android:layout_marginTop="16dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_layer_3"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/min_duration_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    app:tickMarkTintMode="add"
                    android:splitTrack="true"
                    app:tickMarkTint="@color/red_brown_dark"
                    app:tickMark="@drawable/rect6e"
                    android:progressTint="@color/black_black" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/match_progressT"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Your Minimum Progress"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_semibold"
                android:textSize="@dimen/_18sdp"
                android:text="maximum  Duration"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/preference_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:fontFamily="@font/proxima_nova_semibold"
                android:textSize="@dimen/_18sdp"
                tools:text="100"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_1sdp"
            app:cardElevation="@dimen/_1sdp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/max_duration_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_16sdp"
                    android:max="100"
                    android:progress="10" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/months_count_"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Your Max Progress"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_semibold"
                android:textSize="@dimen/_18sdp"
                android:text="Amount Range"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/age_range_preference_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:fontFamily="@font/proxima_nova_semibold"
                android:textSize="17sp"
                tools:text="$10-$1000"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_1sdp"
            app:cardElevation="@dimen/_1sdp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@drawable/shape_layer_3"
                android:backgroundTint="@color/ORANGE_CHAT"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:orientation="vertical">
                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/settings_amt_range_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:labelBehavior="withinBounds"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:paddingBottom="30dp"
                    app:thumbColor="@color/colorPrimary"
                    android:valueFrom="0.0"
                    android:valueTo="100.0"
                    android:stepSize="10.0"
                    app:values="@array/range_slider_values"
                    app:minSeparation="10dp"
                    app:tickColor="@android:color/white"
                    app:haloColor="@android:color/holo_green_dark"
                    app:trackColor="@color/black"
                    android:soundEffectsEnabled="true" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:padding="20dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:textSize="17sp"
            android:id="@+id/amt_progress"
            android:layout_gravity="center"
            android:text="Amount Progress"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/save_pref_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_1sdp"
            android:onClick="SaveMatchPref"
            app:cardElevation="@dimen/_1sdp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_12sdp"
                    android:padding="20dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:textSize="17sp"
                    android:background="@drawable/rect6h"
                    android:paddingBottom="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:text="Save Saving Group Preferences"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>