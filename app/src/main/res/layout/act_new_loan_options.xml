<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect6h"
    android:orientation="vertical"
    tools:context=".Customers.NewLoanOptions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center"
        android:background="@drawable/shape_layer_3b"
        android:layout_gravity="center"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:padding="20dp"
            android:layout_marginStart="5dp"
            android:text="Only Our Cooperative Members are entitled to take Loans"
            android:textColor="@color/red_brown_dark"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gilroy_heavy"
            android:id="@+id/tv133"
            android:layout_marginBottom="10dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:padding="20dp"
            android:layout_marginStart="5dp"
            android:text="Join Now for Loans and discounted services"
            android:textColor="@color/red_brown_dark"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/proxima_nova_cond_regular"
            android:id="@+id/t13"
            android:layout_marginBottom="10dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="bold" />



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSub_New"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center_horizontal"
                    android:padding="30dp"
                    android:layout_marginEnd="5dp"
                    android:text="New Membership"
                    android:textColor="@color/white_good"
                    style="@style/EndCallImageButton" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:background="@drawable/rect_new"
                    android:layout_marginTop="5dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_HistorySub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:padding="30dp"
                        android:textSize="15sp"
                        android:text="History"
                        style="@style/EndCallImageButton"
                        android:textColor="@color/white_good"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/home_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:padding="30dp"
                        android:layout_marginStart="5dp"
                        android:textSize="15sp"
                        style="@style/EndCallImageButton"
                        android:text="Home"
                        android:textColor="@color/white_good"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.1dp"
                    android:background="@color/green_dark"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.1dp"
        android:background="@color/ORANGE_CHAT"/>


</androidx.appcompat.widget.LinearLayoutCompat>