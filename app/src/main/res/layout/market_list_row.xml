<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_their_message">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp"
        android:id="@+id/card_l1"
        app:cardBackgroundColor="#f3f5f7"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/id_l1"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="@drawable/rect_their_black"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_market"
                    android:layout_width="58dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/m4"
                    android:contentDescription="Account Image" />

                <TextView
                    android:layout_width="match_parent"
                    android:text=" Creek Road Market"
                    android:id="@+id/marketName"
                    android:layout_marginEnd="2dp"
                    android:padding="5dp"
                    android:typeface="serif"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:text=" Port Harcourt"
                android:id="@+id/lga_m"
                android:layout_marginEnd="2dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/red_brown_dark"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text=" Rivers State"
                android:id="@+id/market_State"
                android:layout_marginEnd="2dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/red_brown_dark"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text=" Commodity Market , 200 "
                android:id="@+id/type_market"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="2dp"
                android:textColor="@color/red_brown_dark"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/option_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="6dp"
        android:background="@drawable/rect6b"
        android:elevation="3dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:layout_weight="1"
            android:paddingTop="6dp"
            android:layout_marginEnd="6dp"
            android:paddingBottom="6dp"
            android:text="Edit"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:layout_weight="1"
            android:paddingTop="6dp"
            android:paddingEnd="6dp"
            android:paddingBottom="6dp"
            android:text="Remove"
            android:textAlignment="center"
            android:textSize="12sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>