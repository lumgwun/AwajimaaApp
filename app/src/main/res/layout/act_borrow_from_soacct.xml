<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Customers.CusLoanAct">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layoutDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:weightSum="1"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:padding="10dp"
        android:visibility="visible"
        android:background="@drawable/shape_rect13">
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:layout_weight="1"
            android:padding="30dp"
            android:inputType="number"
            android:id="@+id/loanAmountSO"
            android:background="@drawable/rect6g"
            android:hint="Input the Amount to Borrow"
            android:layout_marginStart="2dp"
            android:textSize="17sp"
            android:layout_marginEnd="2dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bankLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_rect13"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:id="@+id/loanBank"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="Select Bank"
            android:layout_marginStart="2dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="0dp"
            android:entries="@array/Banks"
            android:layout_weight="2"
            android:padding="20dp"
            android:background="@drawable/rect6g"
            android:id="@+id/selected_bank_account35"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:background="@drawable/rect6g"
            android:padding="20dp"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="@color/colorPrimaryDark"
            android:hint="Account Name"
            android:id="@+id/_deposit_account_name33"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:id="@+id/_deposit_account_no34"
            android:background="@drawable/rect6g"
            android:padding="20dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textColorHint="@color/colorPrimaryDark"
            android:hint="Account Number"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/buttonLay3"
        android:weightSum="1"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/sky4"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:text="Send"
            android:textSize="20sp"
            android:padding="30dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/shape_layer"
            android:layout_marginEnd="2dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ApplyForLoan"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>