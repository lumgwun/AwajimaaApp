<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/event_rect"
    android:layout_height="match_parent"
    tools:context=".MapAndLoc.ERMediaUAct">
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:text="Select Media Files "
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:onClick="uploatMediaF"
        android:id="@+id/upload_mediaF"
        android:textColor="@android:color/holo_orange_dark"
        android:background="@drawable/shape_layer_3b"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_height="100dp"/>

    <net.qiujuer.genius.ui.widget.ImageView
        android:layout_width="350dp"
        android:id="@+id/img_mediaF"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/transaction2"
        android:layout_height="200dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:text="Send Media Files "
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:onClick="sendMediaFiles"
        android:id="@+id/send_mediaF"
        android:textColor="@android:color/holo_orange_dark"
        android:background="@drawable/shape_layer_3b"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_height="100dp"/>



</androidx.appcompat.widget.LinearLayoutCompat>