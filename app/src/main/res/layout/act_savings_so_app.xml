<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rect_their_message"
    android:theme="@style/NoActionBar"
    android:layout_height="match_parent"
    tools:context="com.skylightapp.Customers.SavingsStandingOrder">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="90dp"
        android:layout_marginBottom="5dp"
        app:cardForegroundColor="@color/cardview_shadow_end_color"
        app:cardBackgroundColor="@color/cardview_light_background"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:id="@+id/txtResult4"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/holo_red_dark"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="Savings with Automatic Deductions"
            android:layout_height="wrap_content"/>


    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rect_their_message"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="90dp"
                android:layout_margin="5dp"
                app:cardForegroundColor="@color/cardview_shadow_end_color"
                app:cardBackgroundColor="@color/cardview_light_background"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:background="@drawable/rect_their_message"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_red_dark"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="Note that the plan is for each day,or week"
                    android:layout_height="wrap_content"/>


            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="90dp"
                android:layout_margin="5dp"
                app:cardForegroundColor="@color/cardview_shadow_end_color"
                app:cardBackgroundColor="@color/cardview_light_background"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal"
                    android:padding="12dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_red_dark"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="Also Note that Skylight would take a day's savings, or 0.03% of your savings"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="90dp"
                android:layout_marginBottom="16dp"
                android:layout_margin="5dp"
                app:cardForegroundColor="@color/cardview_shadow_end_color"
                app:cardBackgroundColor="@color/cardview_light_background"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/shape_rect14"
                    android:padding="10dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_red_dark"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="Select a plan below"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.card.MaterialCardView>
            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:entries="@array/plans"
                android:padding="20dp"
                android:id="@+id/planSpinner"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_rect13"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:padding="30dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="Choose the Frequency of plan"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:layout_width="0dp"
                    android:padding="20dp"
                    android:id="@+id/SOFrequency2"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/rect6e"
                    android:entries="@array/Frequency_Of_Plan"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:padding="30dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="Choose Currency of the plan"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:layout_width="0dp"
                    android:padding="20dp"
                    android:id="@+id/SOCurrency"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/rect6e"
                    android:entries="@array/Plan_Currency"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:background="@drawable/shape_rect14"
                    android:textAlignment="center"
                    android:padding="30dp"
                    android:textColorHint="@color/white"
                    android:id="@+id/soNoOfMonths4"
                    android:gravity="center_horizontal"
                    android:hint="Enter the number of  Months"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:id="@+id/proceed_Button"
                android:background="@drawable/shape_rect14"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Proceed to Payment"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>