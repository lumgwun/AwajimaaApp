<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapAndLoc.RemoveLocTracking">
    <Button
        android:id="@+id/do_bnt_locU"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="requestMyLocUpdates"
        android:text="Do Loc. Update" />

    <Button
        android:id="@+id/remove_my_loc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="removeMyLocUpdates"
        android:text="Remove My Loc Update" />

</androidx.appcompat.widget.LinearLayoutCompat>