<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rect13"
    tools:context="com.skylightapp.Admins.LoanApprovalAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingTop="10dp"
            android:text="Loan ID"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:id="@+id/loanTextID"
            android:layout_marginBottom="12dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingTop="10dp"
            android:text="Purpose of Loan"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:id="@+id/loanTextPurpose"
            android:layout_marginBottom="12dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingTop="10dp"
            android:text="Customer Credit Report"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:maxLines="5"
            android:id="@+id/loanTextBurea"
            android:layout_marginBottom="12dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingTop="10dp"
            android:text="Loan Amount"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:id="@+id/loanTextAmt"
            android:layout_marginBottom="12dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingTop="10dp"
            android:text="Loan Application Date"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:id="@+id/loanTextDate"
            android:layout_marginBottom="12dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:textOn="Approve"
            android:textSize="20sp"
            android:id="@+id/LoanSwitch"
            android:text="Approval Switch"
            android:textOff="Disapprove"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</ScrollView>