<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/locationItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/locationItemSeparator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/locationItemIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locationItemSeparator" />

    <LinearLayout
        android:id="@+id/locationItemTextRoot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/locationItemIcon"
        app:layout_constraintTop_toTopOf="@id/locationItemIcon">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/locationItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/gilroy_regular"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/driverImage"
            app:layout_constraintTop_toTopOf="@id/driverImage" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/locationItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/gilroy_regular"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/driverImage"
            app:layout_constraintTop_toTopOf="@id/driverImage" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>