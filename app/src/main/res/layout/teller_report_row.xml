<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rect_my_message"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:focusable="true"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/p_1"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/report_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="5dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_icon2"
                    android:scaleType="fitXY"
                    android:contentDescription="Teller Report" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tellerReportID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:paddingStart="8dp"
                        android:text="Report ID"
                        android:gravity="right"
                        android:paddingEnd="5dp"
                        android:paddingTop="6dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tellerMarketer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="Teller Marketer"
                        android:textStyle="bold"
                        android:paddingStart="8dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_1"
                android:id="@+id/p_01"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tellerReportDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:text="Date: 23/04/2021"
                    android:layout_weight="1"
                    android:paddingEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_01"
                android:id="@+id/p_11011"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/reportAmountTendered"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Cash Amount:"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_11011"
                android:id="@+id/p_1101"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/amountPaidOnline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Non Cash Paid"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="5dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/p_2"
                android:weightSum="1"
                android:layout_below="@id/p_1101"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/expectedAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Amount Expected"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="5dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/p_2"
                android:id="@+id/p_3"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textStyle="bold"
                        android:text="Balance."
                        android:layout_marginBottom="10dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/reportStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:paddingStart="5dp"
                        android:layout_gravity="right"
                        android:layout_marginBottom="10dp"
                        android:text=" Report Status"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textStyle="italic"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>