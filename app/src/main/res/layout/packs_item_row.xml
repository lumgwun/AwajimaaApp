<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/shape_rect14"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:clickable="true"
        card_view:showDividers="middle"
        card_view:dividerPadding="10dp"
        card_view:divider="@drawable/shape_toolbar_dropshadow"
        android:focusable="true"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/p_1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/thumbnail_tx"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/skylight_2"
                    android:scaleType="fitXY"
                    android:contentDescription="Report" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/package_customer"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:paddingStart="8dp"
                        android:text="Customer Name"
                        android:paddingEnd="16dp"
                        android:paddingTop="16dp"
                        android:textColor="#111"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/package_user_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="User ID"
                        android:paddingStart="8dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/p_1"
                android:id="@+id/p_0"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/package_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Account No:"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="16dp"
                    android:textColor="#111"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:textAlignment="center"
                    android:text="Bank"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/package_account_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:textAlignment="center"
                    android:text="NGN60,000"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/p_2"
                android:layout_below="@id/p_0"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/package_amount1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:visibility="gone"
                    android:text="Package Amount"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingEnd="8dp"
                    android:textColor="#111"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/package_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:paddingEnd="8dp"
                    android:text="Expected savings"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/p_2"
                android:id="@+id/p_3"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/package_duration1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Duration"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColor="#111"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/package_saved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Amount Saved"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="#111"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/package_days_remaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:paddingStart="5dp"
                    android:text=" Days remaining"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_3"
                android:id="@+id/p_4"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/package_start_date1"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:text="Start Date"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/package_end_date"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:textAlignment="center"
                    android:text="Termination Date"
                    android:textColor="@color/black"
                    android:textSize="15sp" />




            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_4"
                android:id="@+id/p_5"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/package_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Status"
                    android:paddingStart="8dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:textColor="#111"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_5"
                android:id="@+id/p_6"
                android:background="@drawable/rect6d"
                android:paddingBottom="10dp"
                android:padding="15dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/package_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="More Details>>>"
                    android:background="@drawable/shape_rect_7"
                    android:gravity="center_horizontal"
                    android:paddingTop="16dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>