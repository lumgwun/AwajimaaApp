<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:theme="@style/NoActionBarTheme"
    tools:context=".FlutterWavePayments.FluPaywithBank">
    <include layout="@layout/tool_bar11d"/>
    <TextView
        android:id="@+id/cus_info"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:text="Obianuju Chai"
        android:gravity="start"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="14dp"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark" />
    <TextView
        android:id="@+id/item_info_Amt"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:text="Item 09237"
        android:gravity="start"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="14dp"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark" />
    <TextView
        android:id="@+id/card_info"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:text="Bank Input Details"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"
        android:padding="14dp"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:weightSum="2"
        android:padding="25dp"
        android:background="@drawable/rect6d"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bankName"
            android:layout_width="0dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_height="wrap_content"
            android:text="Bank Name"
            android:gravity="start"
            android:textStyle="bold"
            android:textSize="17sp"
            android:padding="14dp"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark" />
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/spn_bankAcct"
            android:entries="@array/Banks"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_bankAcctName"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/bankAcctName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/rect6d"
            android:padding="35dp"
            android:textSize="15sp"
            android:textColorHint="@color/colorPrimaryDark"
            android:autofillHints="533******"
            android:hint="John Okafor J."
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_bankAcctNo"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/bankAcctNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/rect6d"
            android:padding="35dp"
            android:textSize="15sp"
            android:textColorHint="@color/colorPrimaryDark"
            android:autofillHints="0098234561"
            android:hint="0098234561"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PAY NOW"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="true"
            android:background="@drawable/shape_rect_6"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:id="@+id/pay_now33" />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="true"
            android:background="@drawable/shape_rect_6"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:id="@+id/home_Bank_paymen3t" />


    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/ls_info"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:text="Powered by Lumgwun Solutions"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="15sp"
        android:singleLine="true"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/holo_red_dark" />






</androidx.appcompat.widget.LinearLayoutCompat>