<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_their_message"
    tools:context="com.skylightapp.Admins.GrpSavingsAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f5f7"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="10dp"
            android:text="Time Lines"
            android:id="@+id/grp_tittle_txt"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textSize="20sp" />
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_gravity="right"
            android:id="@+id/grp_fab2"
            android:foregroundGravity="right"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_grpAcct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginTop="10dp"
            android:animateLayoutChanges="true"
            android:scrollbars="vertical" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>