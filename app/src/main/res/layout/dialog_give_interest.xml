<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/interest"
    android:background="@drawable/shape_rect_7"
    android:paddingBottom="12dp">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/app_give_interest"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            app:title="Give Interest"
            app:titleTextColor="@color/white"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_below="@+id/app_give_interest"
        app:cardElevation="50dp"
        android:id="@+id/card_interest_l1"
        app:cardBackgroundColor="#f3f5f7"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/balance_l1"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@drawable/shape_rect_7"
            android:layout_height="wrap_content">
            <android.inputmethodservice.ExtractEditText
                android:layout_width="match_parent"
                android:text=" ID"
                android:id="@+id/interest_id"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:background="@drawable/shape_rect_7"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text=" Balance"
                android:id="@+id/interest_3"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:background="@drawable/shape_rect_7"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_interest"
        android:background="@drawable/shape_rect_3"
        android:text="Submit"
        android:padding="15dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/confirmationMessage_interest"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmationMessage_interest"
        android:textAlignment="center"
        android:layout_below="@id/card_interest_l1"
        android:layout_marginBottom="@dimen/button_margin_bottom"/>

</RelativeLayout>
