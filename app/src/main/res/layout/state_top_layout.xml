<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/event_rect"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/view_top_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.skylightapp.StateDir.StateDashboard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/state_chats"
                android:layout_width="0dp"
                android:text="Waste Mgt."
                android:onClick="getStateWasteMgt"
                android:layout_marginEnd="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_rect14c"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/state_Emerg"
                android:layout_width="0dp"
                android:text="Waste Mgt Tx."
                android:onClick="getWasteCollectTX"
                android:layout_marginEnd="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_rect14c"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/state_Ann"
                android:layout_width="0dp"
                android:text="State Info."
                android:onClick="getStateAnnouns"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_rect14c"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.LinearLayoutCompat>