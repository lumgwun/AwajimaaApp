<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Admins.DepDocAct">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_width="match_parent"
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_height="52dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:text="Admin Deposit Docs"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:hint="Deposit ID"
                android:id="@+id/edtADepositDoc"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:padding="20dp"
                    android:id="@+id/button_choose_image"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/rect6h"
                    android:text="Select Payment Slip"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/transfer3"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/chosenImageView"
                    android:contentDescription="payment Doc"
                    android:layout_height="180dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:padding="20dp"
                android:id="@+id/uploadBtn"
                android:layout_marginTop="60dp"
                android:background="@drawable/rect6h"
                android:text="Upload Payment Slip"
                android:layout_height="wrap_content"/>



        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>