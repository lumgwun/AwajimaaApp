<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/rect_new"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:clickable="true"
        card_view:showDividers="middle"
        card_view:dividerPadding="10dp"
        card_view:divider="@drawable/shape_toolbar_dropshadow"
        android:focusable="true"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/p_1"
                android:layout_height="wrap_content">
                <com.mikepenz.materialdrawer.view.BezelImageView
                    android:id="@+id/b_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ifesinachi"
                    android:scaleType="fitXY"
                    android:contentDescription="Report" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/p_14"
                android:weightSum="1"
                android:layout_below="@+id/p_1"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/biz_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:paddingStart="8dp"
                    android:text="Biz Name:"
                    android:paddingEnd="16dp"
                    android:layout_weight="1"
                    android:paddingTop="6dp"
                    android:textAlignment="center"
                    android:textColor="#111"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/type_biz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p_14"
                android:lines="2"
                android:paddingStart="8dp"
                android:text="Biz Type"
                android:paddingEnd="2dp"
                android:gravity="center_horizontal"
                android:paddingTop="6dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>