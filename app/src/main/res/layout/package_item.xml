<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rect_4"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/singleItemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/rect_their_message"
        android:clickable="true"
        android:padding="20dp"
        android:elevation="100dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:padding="5dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="2"
                android:id="@+id/layoutMo1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="70dp"
                    android:src="@drawable/savings"
                    android:id="@+id/ItemImg"
                    android:layout_height="70dp"/>
                <TextView
                    android:id="@+id/pname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:padding="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="SkyLight Package Name"
                    android:textAlignment="inherit"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="2"
                android:id="@+id/layoutMo2"
                android:layout_below="@id/layoutMo1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/_daily_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Price per Day"
                    android:textAlignment="inherit"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_below="@id/layoutMo2"
                android:id="@+id/packageLayoutDescription"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/packageDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Description"
                    android:textAlignment="inherit"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_below="@id/packageLayoutDescription"
                android:id="@+id/durationLayout"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/duration3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Duration"
                    android:textAlignment="inherit"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:id="@+id/layoutMo11"
                android:orientation="vertical"
                android:layout_below="@id/durationLayout"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:hint="Number of days"
                    android:padding="20dp"
                    android:id="@+id/daysNo"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/pTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:padding="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Total:"
                    android:textAlignment="inherit"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />


            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="2"
                android:id="@+id/submitBtn"
                android:layout_below="@id/layoutMo11"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:hint="Submit"
                    android:textSize="20sp"
                    android:id="@+id/BSubmitBtn"
                    android:background="@drawable/shape_rect14"
                    android:padding="20dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>