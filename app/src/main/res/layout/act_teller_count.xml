<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    style="@style/NoActionBar"
    android:theme="@style/NoActionBarTheme"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/llScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/rect6g" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/shape_rect14"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/sky_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_rect14"
                        android:orientation="horizontal"
                        android:paddingEnd="1dp"
                        android:weightSum="1"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:paddingStart="1dp">

                        <TextView
                            android:id="@+id/sky_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:elevation="2dp"
                            android:layout_weight="1"
                            android:text="Teller Count Updates"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textStyle="italic"
                            android:paddingEnd="10dp"
                            android:padding="20dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/group_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/sky_1"
                        android:background="@drawable/shape_rect14"
                        android:orientation="horizontal"
                        android:paddingEnd="1dp"
                        android:visibility="gone"
                        android:weightSum="2"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:paddingStart="1dp">

                        <TextView
                            android:id="@+id/statement_name33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:elevation="2dp"
                            android:layout_weight="1"
                            android:text="Teller: Roma Elias J"
                            android:gravity="center"
                            android:textStyle="italic"
                            android:paddingEnd="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/statement_image"
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:layout_gravity="end"
                            android:foregroundGravity="right"
                            android:background="@drawable/shape_layer_1a"
                            android:contentDescription="@string/customer"
                            android:layout_marginEnd="10dp"
                            android:paddingEnd="1dp"
                            android:layout_weight="1"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:paddingStart="1dp"
                            android:scaleX=".85"
                            android:scaleY=".85"
                            android:src="@drawable/ic_admin_user" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/group_2d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/group_1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingEnd="1dp"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="1dp">

                        <TextView
                            android:id="@+id/txtTellerTotalSavingsToday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:layout_marginBottom="20dp"
                            android:text="Total Savings Today: N"
                            android:paddingLeft="1dp"
                            android:layout_weight="1"
                            android:paddingRight="1dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:singleLine="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp" />


                        <TextView
                            android:id="@+id/TellertotalSavingAll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:singleLine="true"
                            android:text="Total Savings N:"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/group_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/group_2d"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="1dp"
                        android:weightSum="1"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="1dp">

                        <TextView
                            android:id="@+id/txtTellerNewCusToday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="New Customer Today:"
                            android:paddingLeft="1dp"
                            android:layout_weight="1"
                            android:paddingRight="1dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:singleLine="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/group_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_below="@id/group_2"
                        android:paddingEnd="1dp"
                        android:weightSum="1"
                        android:layout_marginBottom="20dp"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:paddingStart="1dp">

                        <TextView
                            android:id="@+id/txtTellerNewPackageCountToday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:singleLine="true"
                            android:textStyle="bold"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:text="New Packages Today:"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_weight="1"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/group_6_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_below="@id/group_4"
                        android:paddingEnd="1dp"
                        android:weightSum="1"
                        android:layout_marginBottom="20dp"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:paddingStart="1dp">

                        <TextView
                            android:id="@+id/txtTellerNewTXToday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:singleLine="true"
                            android:text="Transactions today:N:"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/group_4_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_below="@id/group_6_0"
                        android:paddingEnd="1dp"
                        android:weightSum="1"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:paddingStart="1dp">

                        <TextView
                            android:id="@+id/TotalTellerManualPayments"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:singleLine="true"
                            android:text="Manual Payment today :"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_below="@id/group_4_0"
                        android:paddingEnd="1dp"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:paddingStart="1dp">

                        <TextView
                            android:id="@+id/TellerCustomerPaymentToday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:singleLine="true"
                            android:layout_marginBottom="10dp"
                            android:text="Customer Payment Today N:"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:id="@+id/group_410_0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_below="@id/group_11_0"
                            android:paddingEnd="1dp"
                            android:weightSum="3"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:paddingStart="1dp">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:hint="Customer ID"
                                android:textColorHint="@color/colorPrimaryDark"
                                android:id="@+id/edtTellerCustomerPaymentToday"
                                android:layout_height="wrap_content"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/buttonTellerCustomerPayment"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:singleLine="true"
                                android:onClick="getCusTellerPaymentToday"
                                android:text="Get Customer Payment"
                                android:layout_weight="2"
                                android:background="@drawable/rect6g"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>


                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#1effffff" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/awajima_logo" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>