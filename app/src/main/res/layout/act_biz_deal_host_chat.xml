<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skylightapp.Markets.BizDealDetailHostAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/shape_rect14c"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_backa"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_cornered_rect_500"
                android:backgroundTint="@color/white_good"
                android:padding="11dp"
                android:rotation="90"
                android:src="@drawable/ic_down_arrow"
                app:tint="@color/black" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/gilroy_light"
                android:letterSpacing=".08"
                android:text="Biz Deal host dashboard"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </LinearLayout>
        <androidx.fragment.app.FragmentContainerView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/frag_Host"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/bizDeal_t"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_layer_3b"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic__category" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biz Deal Twenty Trailers of Yam"
                        android:textColor="@color/white_good"
                        android:textSize="20sp"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:singleLine="true"
                        android:fontFamily="@font/gilroy_extra_bold"
                        android:id="@+id/tittle_bizD"
                        android:letterSpacing=".06"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:scrollHorizontally="true">
                        <requestFocus />
                    </androidx.appcompat.widget.AppCompatTextView>

                </LinearLayout>



                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/shape_rect14c"
                    android:backgroundTint="@color/gray_10"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/gilroy_bold"
                            android:maxLines="1"
                            android:text="Partner acceptance"
                            android:textColor="@color/green_dark"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_ApprovalReq"
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_cornered_rect_500"
                            android:backgroundTint="@color/green_dark"
                            android:fontFamily="@font/gilroy_semi_bold"
                            android:text="Approved Request"
                            android:textAllCaps="false"
                            android:textColor="@color/white_good"
                            android:textSize="14sp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/bg_cornered_rect_10"
                    android:backgroundTint="@color/gray_10"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/gilroy_semi_bold"
                                android:maxLines="1"
                                android:text="@string/available_for_calls"
                                android:textColor="@color/gray_dark"
                                android:textSize="16sp" />

                            <androidx.appcompat.widget.AppCompatTextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/gilroy_regular"
                                android:maxLines="1"
                                android:text="you will get calls from Deal Partner, if this is on"
                                android:textColor="@color/gray"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:id="@+id/avail_for_Deal_call"
                            android:gravity="center_vertical"
                            app:track="@drawable/rect6e"

                            />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_goLiveDeal"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_gradiant_10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_live" />

                    <androidx.appcompat.widget.AppCompatTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gilroy_extra_bold"
                        android:gravity="center"
                        android:letterSpacing=".06"
                        android:text="Deal live"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_cornered_rect_10"
                    android:backgroundTint="@color/EOCOLOR"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/lout_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/gilroy_semi_bold"
                            android:letterSpacing="0.07"
                            android:maxLines="1"
                            android:text="Deal Account"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/btn_menu"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="3dp"
                                android:src="@drawable/transfer3" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/gilroy_black"
                                android:letterSpacing=".08"
                                android:text="Collect your money!"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="12sp" />


                        </LinearLayout>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/dealAcct_WalletD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lout_top"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gilroy_bold"
                        android:letterSpacing=".07"
                        android:text="USD 500M"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/lout_progress"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_below="@id/dealAcct_WalletD"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/event_rect"
                            android:backgroundTint="@color/gray_light_pro" />

                        <View
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rect_new" />

                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_milestoneC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lout_progress"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="7dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/gilroy_regular"
                        android:maxLines="1"
                        android:text="number of Milestones 2"
                        android:textColor="@color/gray_dark"
                        android:textSize="12sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_milestomes"
                        android:layout_width="140dp"
                        android:layout_height="43dp"
                        android:onClick="MilestoneHistory"
                        android:layout_below="@id/tv_milestoneC"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="7dp"
                        android:background="@drawable/bg_gradiant_500"
                        android:fontFamily="@font/gilroy_semi_bold"
                        android:text="Milestone"
                        android:textColor="@color/green_dark"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rect_new"
                    android:backgroundTint="@color/gray_10"
                    android:padding="2dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/gilroy_semi_bold"
                        android:letterSpacing="0.07"
                        android:maxLines="1"
                        android:text="Total Amount"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_total_deal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_total"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/gilroy_semi_bold"
                        android:letterSpacing=".07"
                        android:text="USD 1000 M"
                        android:padding="20dp"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_dark"
                        android:textSize="14sp" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="50dp"
                        app:cardBackgroundColor="#f3f5f7"
                        android:layout_height="wrap_content">

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_total_deal"
                        android:layout_marginTop="15dp"
                        android:weightSum="3"
                        android:backgroundTint="@color/red_brown_dark"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="LogisticsDetails"
                                android:padding="5dp"
                                android:gravity="center_horizontal"
                                android:id="@+id/hDeal_logistics"
                                android:background="@drawable/rect_their2"
                                android:fontFamily="@font/gilroy_semi_bold"
                                android:layout_marginStart="6dp"
                                android:text="Logistics"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="50dp"
                                android:layout_marginTop="10dp"
                                app:cardBackgroundColor="#f3f5f7"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txt_logistics"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_total"
                                    android:fontFamily="@font/gilroy_semi_bold"
                                    android:letterSpacing=".07"
                                    android:text="USD 10K"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="10dp"
                                    android:textAllCaps="true"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="14sp" />

                            </androidx.cardview.widget.CardView>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:id="@+id/hDeal_insurance"
                                android:text="Insurance"
                                android:onClick="InsuranceDetails"
                                android:background="@drawable/rect_their3"
                                android:fontFamily="@font/gilroy_semi_bold"
                                android:gravity="center"
                                android:layout_marginStart="6dp"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="50dp"
                                android:layout_marginTop="10dp"
                                app:cardBackgroundColor="#f3f5f7"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txt_insurance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_total"
                                    android:fontFamily="@font/gilroy_semi_bold"
                                    android:letterSpacing=".07"
                                    android:text="USD 10K"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="10dp"
                                    android:textAllCaps="true"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="14sp" />

                            </androidx.cardview.widget.CardView>

                        </androidx.appcompat.widget.LinearLayoutCompat>



                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:onClick="TimelimesHistory"
                                android:id="@+id/timeline_hDeal"
                                android:text="Timelines"
                                android:background="@drawable/rect_their2a"
                                android:fontFamily="@font/gilroy_semi_bold"
                                android:gravity="center"
                                android:layout_marginStart="6dp"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="50dp"
                                android:layout_marginTop="10dp"
                                app:cardBackgroundColor="#f3f5f7"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txt_timelines"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_total"
                                    android:fontFamily="@font/gilroy_semi_bold"
                                    android:letterSpacing=".07"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="10 updates"
                                    android:padding="10dp"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="14sp" />

                            </androidx.cardview.widget.CardView>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </LinearLayout>


                </RelativeLayout>
                <include layout="@layout/deal_other"/>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>