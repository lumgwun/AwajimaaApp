<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rect11"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_Cus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="#f1f5f7"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/tx_l1"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/layoutTx"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="80dp"
                        android:id="@+id/imgCusTx"
                        android:src="@drawable/transaction2"
                        android:layout_height="60dp"/>
                    <TextView
                        android:id="@+id/TXpayee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nsikak Udeme"
                        android:lines="1"
                        android:padding="10dp"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/loan_l1a"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cus_transaction_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="10dp"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textStyle="bold"
                        android:text="Type of Transaction"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/tx_l1_id"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cus_tx_id1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ID:0098"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/cus_transact_date"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="21/05/2021"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tranxCus_amount2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Amount :NGN10,000"
                        android:gravity="start"
                        android:textColor="#f00"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/tx_l2"
                android:visibility="visible"
                android:weightSum="1"
                android:layout_below="@id/tx_l1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tx_destAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Destination Acct: 070390000000"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/tx_l3"
                android:weightSum="2"
                android:layout_below="@id/tx_l2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tx_savingsID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:gravity="start"
                    android:text="Savings ID: 00987"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/TxnoOfDays"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="No of days: 5 days"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/tx_l4"
                android:weightSum="2"
                android:layout_below="@id/tx_l3"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tx_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Status: Approved"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tx_approvalDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="1dp"
                    android:text="Approval Date:12/05/2021"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>