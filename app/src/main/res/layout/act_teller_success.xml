<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sky4"
    android:layout_height="match_parent"
    tools:context="com.skylightapp.Tellers.TellerSuccessActivity">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Go back to Dashboard"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:padding="50dp"
        android:gravity="center"
        android:id="@+id/ds_cm"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="2dp"
        android:onClick="goBackToHome"
        android:text="Click to go back to your Dasgboard"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/rect6d"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>