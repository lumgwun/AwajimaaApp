<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/grpSavingsAcct_rl1"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_code1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="#fff"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="20dp">

        <com.google.android.material.circularreveal.CircularRevealRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/grpAcct_l1"
                android:paddingStart="12dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="50dp"
                        android:src="@drawable/awajima_logo"
                        android:id="@+id/grpAcct0"
                        android:contentDescription="@string/app_name"
                        android:layout_height="50dp"/>
                    <TextView
                        android:id="@+id/grp_Acct_ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textStyle="bold"
                        android:text="Grp. Acct. ID"
                        android:paddingTop="16dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/doc_l3_a"
                    android:weightSum="1"
                    android:layout_below="@id/doc_l3"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/grp_Acct_Tittle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_weight="1"
                        android:paddingLeft="2dp"
                        android:paddingRight="6dp"
                        android:paddingTop="16dp"
                        android:textStyle="bold"
                        android:text="Group Acct. Tittle"
                        android:gravity="start"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/grp_Acct_Purpose"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_weight="1"
                        android:paddingLeft="2dp"
                        android:gravity="start"
                        android:paddingRight="6dp"
                        android:textStyle="bold"
                        android:text="Group Acct. Purpose:"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />



                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/grpAcct_l2"
                android:weightSum="1"
                android:layout_marginStart="12dp"
                android:layout_below="@id/grpAcct_l1"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Group Acct. Names"
                    android:id="@+id/grpAcctNames"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:paddingLeft="2dp"
                    android:paddingRight="6dp"
                    android:paddingTop="16dp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/grp_l3"
                android:weightSum="2"
                android:layout_marginStart="12dp"
                android:layout_below="@id/grpAcct_l2"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Start Date"
                    android:id="@+id/grpAcctSD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:paddingLeft="2dp"
                    android:paddingRight="6dp"
                    android:paddingTop="16dp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <TextView
                    android:text="End Date"
                    android:id="@+id/grpAcctED"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:paddingLeft="2dp"
                    android:paddingRight="6dp"
                    android:paddingTop="16dp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/grp_l4"
                android:weightSum="1"
                android:layout_marginStart="12dp"
                android:layout_below="@id/grp_l3"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Group Acct. Balance"
                    android:id="@+id/grpAcctBalance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:paddingLeft="2dp"
                    android:paddingRight="6dp"
                    android:paddingTop="16dp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>