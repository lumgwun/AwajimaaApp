<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="1dp"
    android:background="@drawable/rect_my_message"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="#fff"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/user_l1"
            android:paddingStart="2dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.mikepenz.materialdrawer.view.BezelImageView
                    android:layout_width="30dp"
                    android:id="@+id/user_pix11"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_icon2"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/EmergProfileID"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="Profile ID"
                    android:textStyle="bold"
                    android:paddingBottom="10dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_marginEnd="2dp"
                    android:paddingEnd="2dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="2dp"
                android:id="@+id/user_l4"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/user_l1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/EmergType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textStyle="bold"
                    android:paddingStart="5dp"
                    android:paddingTop="6dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="2dp"
                android:id="@+id/location_date"
                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Emerg_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date/Time"
                    android:textStyle="bold"
                    android:paddingStart="5dp"
                    android:paddingEnd="2dp"
                    android:paddingTop="16dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="2dp"
                android:id="@+id/user_l5"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/EmergLatLng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textStyle="bold"
                    android:paddingStart="5dp"
                    android:paddingTop="6dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="2dp"
                android:id="@+id/emergency_status"
                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Emerg_StatusTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Report Status"
                    android:textStyle="bold"
                    android:paddingStart="5dp"
                    android:paddingEnd="2dp"
                    android:paddingTop="16dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>