<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rect_7">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp"
        android:id="@+id/card_l1"
        app:cardBackgroundColor="#f3f5f7"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/id_l1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_payment"
                    android:layout_width="58dp"
                    android:layout_height="55dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_admin_panel"
                    android:contentDescription="Payment Image" />

                <TextView
                    android:layout_width="match_parent"
                    android:text=" ID"
                    android:textAlignment="center"
                    android:id="@+id/payment_id4"
                    android:layout_marginEnd="5dp"
                    android:padding="35dp"
                    android:background="@drawable/shape_rect_7"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:text=" Payment Type"
                android:id="@+id/paymentType"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text=" Amount"
                android:id="@+id/paymentAmt"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text=" Customer ID:"
                android:id="@+id/paymentCusID"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="match_parent"
                android:text=" Payment Date."
                android:id="@+id/paymentDate"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text=" Office"
                android:id="@+id/paymentOffice"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_width="match_parent"
                android:text=" Status"
                android:id="@+id/paymentStatus"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>