<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/deal_biz_layout"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/dealTittle"
        android:text="Deal 9871" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="18dp"
        android:layout_below="@+id/dealTittle"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/deal_Acct_Cur"
        android:text=" USD" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="18dp"
        android:layout_below="@+id/deal_Acct_Cur"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/deal_created_Date"
        android:text="12/12/2022" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="18dp"
        android:layout_below="@+id/deal_created_Date"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/deal_created_By"
        android:text="Rapael Ltd." />


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox_bDeal"
        android:gravity="end"
        android:layout_below="@+id/deal_created_By"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:foregroundGravity="right"
        android:background="@drawable/rect6e"
        style="@style/UserCheckboxStyle" />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:layout_marginStart="5dp"
        android:id="@+id/deal_statusS"
        android:layout_margin="10dp"
        android:src="@drawable/ic_check_circle_black_24dp"
        android:layout_alignParentRight="true"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:id="@+id/deal_requestBtn"
        android:padding="20dp"
        android:layout_alignParentRight="true"
        android:foregroundGravity="right"
        android:gravity="end"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        android:layout_below="@+id/deal_statusS"
        android:background="@drawable/shape_layer_3b"
        android:text="Accept Biz Deal"
        android:layout_height="wrap_content"/>


</RelativeLayout>