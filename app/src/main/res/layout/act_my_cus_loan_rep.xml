<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:theme="@style/NoActionBar"
    tools:context=".Tellers.MyCusLoanRepayment">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rect_their_message"
        android:layout_height="wrap_content">
        <com.github.florent37.shapeofview.shapes.ArcView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="5.0dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="15dp"
            app:shape_arc_cropDirection="inside"
            app:shape_arc_height="15dp"
            app:shape_arc_position="bottom">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    app:titleMarginStart="80dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    app:title="Skylight Loan Repayment"
                    android:textAlignment="center"
                    app:titleTextColor="@color/colorPrimaryDark"
                    android:layout_height="100dp"/>
            </com.google.android.material.appbar.AppBarLayout>

        </com.github.florent37.shapeofview.shapes.ArcView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Select from my Customers"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="17sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_rect13b"
            android:layout_marginEnd="2dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:id="@+id/_customerMy"
            android:padding="30dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/old_package"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Select the Loan to repay"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="17sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:padding="20dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:id="@+id/loanFromMyCus"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:background="@drawable/shape_rect13b"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:padding="40dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/loanBalanceMy"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:focusable="true"
            android:textSize="15sp"
            android:hint="Loan Balance"
            android:textStyle="bold"
            android:textColorHint="@color/colorPrimaryDark"
            android:gravity="center_vertical|start"
            android:clickable="false"
            android:layout_gravity="center_vertical|start" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/amountToRepayMy"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="2dp"
            android:focusable="true"
            android:padding="40dp"
            android:background="@drawable/rect6h"
            android:textSize="15sp"
            android:paddingStart="20dp"
            android:hint="Amount to repay"
            android:textStyle="bold"
            android:inputType="number"
            android:textColorHint="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:clickable="false"
            android:layout_gravity="center_horizontal" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="2dp"
            android:gravity="end"
            android:layout_marginTop="20dp"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:text="Click for Action"
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:textStyle="bold"
                    android:id="@+id/loanPayNowMy"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            android:gravity="end"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Powered By Lumgwun Solutions"
                android:textSize="20sp"
                android:padding="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textStyle="italic"
                android:id="@+id/poweredBy"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"/>


        </androidx.cardview.widget.CardView>



    </androidx.appcompat.widget.LinearLayoutCompat>


</ScrollView>