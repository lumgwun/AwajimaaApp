<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:id="@+id/package_linearLayout"
    android:background="@drawable/shape_rect13"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideOverlay"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_margin="5dp"
                    android:src="@drawable/skylight_2"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="package" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="Emeke Ubong's Report"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:id="@+id/customerName4"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Name of Package"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/package_name"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:text="Date Started"
                    android:layout_weight="1"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/p_start_date"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="Date Completed"
                    android:layout_weight="1"
                    android:id="@+id/p_complted_date"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Paid"
                        android:textColor="#000" />

                    <RadioButton
                        android:id="@+id/no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Not Paid"
                        android:textColor="#000" />
                </RadioGroup>
                <Button
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_layer_3"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Submit"
                    android:textColor="#fff"
                    android:textSize="20sp" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Status"
                android:id="@+id/status"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"/>



        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>


</LinearLayout>