<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Customers.RequestItemAct">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:text="Customer:"
            android:layout_marginStart="5dp"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:id="@+id/cusForRequest"
            android:layout_marginBottom="10dp"
            android:gravity="start"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:text="Select a Completed Package"
            android:layout_marginStart="5dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/selectP"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/old_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:weightSum="1"
        android:padding="30dp"
        android:background="@drawable/rect6g">

        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="0dp"
            android:id="@+id/packageForRequestCus"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"
            android:padding="20dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_height="wrap_content"/>



    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:gravity="end"
        android:layout_marginTop="20dp"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:text="Request Package Collection"
                android:textSize="20sp"
                android:padding="20dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:id="@+id/submitRequest"
                android:textColor="@android:color/holo_red_dark"
                android:background="@drawable/rect6g"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/buttonLayoutALL"
        android:padding="10dp"
        android:weightSum="2"
        android:layout_marginBottom="20dp"
        android:background="@drawable/sky4"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:text="Add New"
            android:textSize="20sp"
            android:onClick="addNew"
            android:padding="10dp"
            android:background="@drawable/shape_layer_2"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:id="@+id/add_savingCus"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="0dp"
            android:text="Home"
            android:textSize="20sp"
            android:padding="10dp"
            android:onClick="cusHome"
            android:background="@drawable/shape_layer_2"
            android:layout_marginEnd="2dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:id="@+id/homeCus"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>