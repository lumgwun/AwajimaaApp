<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.payStackCard.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dealer_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:scrollbarSize="30dp"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="@color/white_good"
    android:paddingLeft="1dp"
    android:paddingRight="1dp">
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_layer" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_rect14"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:background="@drawable/shape_rect14"
            android:orientation="horizontal"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/photo_dealer"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rect_their_message"
                android:contentDescription="@string/customer"
                android:layout_marginEnd="10dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:scaleX=".85"
                android:scaleY=".85"
                android:src="@drawable/ic_admin_user" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name_dealer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:text="Madamah Eyina-Isom"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:paddingLeft="10dp"
                android:layout_marginEnd="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/gender_dealer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:elevation="2dp"
                android:text="Female"
                android:gravity="end"
                android:paddingEnd="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="10dp"
                android:layout_marginEnd="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="1dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cust_i_p"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_marginStart="10dp"
                android:text="Biz CAC No:"
                android:paddingLeft="1dp"
                android:layout_weight="1"
                android:paddingRight="1dp"
                android:layout_marginEnd="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cac_biz_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:text="BN 89765"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/group_3"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/address_dler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:singleLine="true"
                android:layout_marginStart="10dp"
                android:text="Brand Name:"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/address_dealer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text=" Njoku &amp; Sons Ltd."
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_below="@id/group_2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/c_dob_ins"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:paddingEnd="1dp"
                android:paddingLeft="1dp"
                android:layout_marginStart="10dp"
                android:paddingRight="1dp"
                android:layout_marginEnd="5dp"
                android:paddingStart="1dp"
                android:text="Market Associated:"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dealer_market"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingEnd="1dp"
                android:paddingLeft="1dp"
                android:layout_weight="1"
                android:paddingRight="1dp"
                android:textAlignment="center"
                android:paddingStart="1dp"
                android:fontFamily="sans-serif"
                android:text="Yam Market, Benue"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/group_54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_below="@id/group_4"
            android:paddingEnd="2dp"
            android:weightSum="2"
            android:paddingStart="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dealer_partner_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:singleLine="true"
                android:padding="10dp"
                android:layout_weight="1"
                android:text="Send Partner Message"
                android:background="@drawable/shape_rect14"
                android:textColor="@color/black"
                android:layout_marginRight="4dp"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/partner_moreBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:drawableRight="@drawable/ic_more"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:singleLine="true"
                android:background="@drawable/shape_rect14"
                android:text="View more Info"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#1effffff" />

</com.google.android.material.payStackCard.MaterialCardView>