<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/NoActionBar"
    style="@style/NoActionBarTheme"
    tools:context="com.skylightapp.Tellers.MyCusNewPackAct"
    android:background="@drawable/rect_their_message">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:text="New Package Area:"
                android:id="@+id/TypeP"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:background="@drawable/rect_their_message"
                android:textSize="17sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:padding="17dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="match_parent"
                android:text="Select from My Customers"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:background="@drawable/rect_their_message"
                android:textSize="17sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:padding="17dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rect6g"
                android:layout_marginEnd="2dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:id="@+id/old_customerMyNew"
                android:padding="50dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:weightSum="2"
                android:id="@+id/or_add_new_cus4"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_rect13b"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/or_select_customer"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:text="Or"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:text="Add new Cus"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:textSize="15sp"
                    android:onClick="addNewMyCus"
                    android:background="@drawable/rect6g"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginEnd="2dp"
                    android:id="@+id/my_add_new_cus"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/type_Layout"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Select Package Type"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:background="@drawable/rect_their_message"
                    android:textSize="17sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="17dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rect6g"
                    android:layout_marginEnd="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:entries="@array/awajima_packages"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/pack_Type"
                    android:padding="40dp"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/inv_Layout"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Select Investment Type"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:background="@drawable/rect_their_message"
                    android:textSize="17sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="17dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rect6g"
                    android:layout_marginEnd="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:entries="@array/investment_package"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/inv_Type"
                    android:padding="50dp"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/food_Stuff_Layout"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Select Food Stuff /Item Type"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:background="@drawable/rect_their_message"
                    android:textSize="17sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="17dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rect6g"
                    android:layout_marginEnd="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:entries="@array/promo"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/foodStuff_Item"
                    android:padding="50dp"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/savings_Layout"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Select Savings Type"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:background="@drawable/rect_their_message"
                    android:textSize="17sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="17dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rect6g"
                    android:layout_marginEnd="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:entries="@array/savings_plans"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/savings_plans"
                    android:padding="50dp"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/promo_Stuff_Layout"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Select Promo Type"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:background="@drawable/rect_their_message"
                    android:textSize="17sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="17dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rect6g"
                    android:layout_marginEnd="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:entries="@array/promo"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/promoStuff"
                    android:padding="50dp"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/months33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:weightSum="2"
                android:padding="20dp"
                android:background="@drawable/rect_their_message"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Enter the Number of Months"
                    android:id="@+id/monthsMyCus"
                    android:textSize="17sp"
                    android:gravity="center_horizontal"
                    android:nextFocusDown="@color/colorPrimaryDark"
                    android:imeOptions="actionDone"
                    android:layout_marginStart="2dp"
                    android:textStyle="italic"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/black"
                    android:inputType="number"
                    android:layout_height="wrap_content"/>


            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/days901"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rect_their_message"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:id="@+id/totalDurationInDays"
                    android:textSize="15sp"
                    android:text="Total Number of the duration days"
                    android:layout_marginStart="2dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>


            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/AmountLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:weightSum="2"
                android:padding="20dp"
                android:background="@drawable/rect_their_message"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Enter Amount to Pay per day"
                    android:id="@+id/amountMyCus"
                    android:textSize="17sp"
                    android:layout_marginStart="2dp"
                    android:textStyle="italic"
                    android:textAlignment="center"
                    android:imeOptions="actionDone"
                    android:gravity="center_horizontal"
                    android:nextFocusDown="@color/colorPrimaryDark"
                    android:padding="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/black"
                    android:inputType="number"
                    android:layout_height="wrap_content"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/days4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:weightSum="2"
                android:padding="20dp"
                android:background="@drawable/rect_their_message"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/edtNoOfDaysMyCus"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:imeOptions="actionDone"
                    android:gravity="center_horizontal"
                    android:nextFocusDown="@color/colorPrimaryDark"
                    android:textColorHint="@color/black"
                    android:hint="Enter Number of days for today"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:text="Total for today:"
                android:visibility="visible"
                android:layout_marginStart="2dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginEnd="2dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/total_amountMyNew"
                android:layout_height="wrap_content">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/buttonLayout44"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sky4"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:text="Add New"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:onClick="addNewPackage"
                    android:background="@drawable/rect6h"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/add_savingsMyNew"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_width="match_parent"
                    android:text="Pay Now"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:visibility="gone"
                    android:onClick="payDialoqMyNew"
                    android:background="@drawable/shape_layer_2"
                    android:layout_marginEnd="2dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/pay_now_savingsMyNew"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>


            </androidx.appcompat.widget.LinearLayoutCompat>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by Lumgwun Soln."
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_rect13"
                android:textColor="@android:color/holo_red_dark"
                android:padding="20dp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>