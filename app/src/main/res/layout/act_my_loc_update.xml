<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/loc1"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.skylightapp.MapAndLoc.MyLocUpdateAct">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/request_location_updates_button"
        android:layout_width="match_parent"
        android:background="@drawable/rect6h"
        android:padding="30dp"
        android:textColor="@color/red_brown_dark"
        android:layout_height="wrap_content"
        android:text="@string/request_loc_updates" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/remove_location_updates_button"
        android:layout_width="match_parent"
        android:padding="30dp"
        android:textColor="@color/red_brown_dark"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect6h"
        android:layout_height="wrap_content"
        android:text="@string/remove_location_updates" />

</androidx.appcompat.widget.LinearLayoutCompat>