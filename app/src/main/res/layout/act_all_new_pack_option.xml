<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AllNewPackOptionAct">

    <TextView
        android:layout_width="match_parent"
        android:text="Select Package Type"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="17sp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:padding="20dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>


    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rect6h"
        android:layout_marginEnd="2dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:entries="@array/skylight_packages"
        android:textColor="@color/colorPrimary"
        android:id="@+id/spnPackType"
        android:padding="30dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/buttonLayout"
        android:padding="10dp"
        android:weightSum="2"
        android:layout_marginBottom="20dp"
        android:background="@drawable/sky4"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:text="Continue"
            android:textSize="20sp"
            android:onClick="continueType"
            android:padding="10dp"
            android:background="@drawable/rect_their4"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/continueee"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="0dp"
            android:text="Cancel"
            android:textSize="20sp"
            android:padding="10dp"
            android:onClick="cancelType"
            android:background="@drawable/shape_layer_2a"
            android:layout_marginEnd="2dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal"
            android:id="@+id/cancelTypeSelection"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>