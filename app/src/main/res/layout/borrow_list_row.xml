<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_rect14"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_borrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="#f1f5f7"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/loan_l1"
                android:paddingStart="12dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.mikepenz.materialdrawer.view.BezelImageView
                        android:layout_width="50dp"
                        android:src="@drawable/user3"
                        android:id="@+id/b_user"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/app_name"
                        android:layout_height="50dp"/>
                    <TextView
                        android:id="@+id/bName_of_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textStyle="italic"
                        android:text="@string/john_onaye"
                        android:paddingTop="16dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="10dp"
                    android:weightSum="2"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/loanDate_text"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_weight="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textStyle="italic"
                        android:text="Date of Loan"
                        android:gravity="start"
                        android:textColor="#f00"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/loanDate_text1"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_weight="1"
                        android:textStyle="italic"
                        android:text="@string/_12_02_2021"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="10dp"
                        android:textColor="#f00"
                        android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="12dp"
                android:id="@+id/loan_l1a"
                android:weightSum="2"
                android:layout_below="@id/loan_l1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/amount_text"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_amount"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/borrow_request_amount2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ngn10_000"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/loan_l3"
                android:weightSum="2"
                android:layout_marginEnd="12dp"
                android:layout_below="@id/loan_l1a"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/borrow_bank_name2"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/zenith_bank_plc"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/borrow_acct3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/_1006000001"
                    android:layout_weight="1"
                    android:paddingBottom="16dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="10dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:id="@+id/loan_l5"
                android:weightSum="2"
                android:layout_below="@id/loan_l3"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/balance_text"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:textStyle="italic"
                    android:text="Balance After Loan"
                    android:gravity="start"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/balance_afterb"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:text="NGN20,000"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_below="@id/loan_l5"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/status_borrowing"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:textStyle="italic"
                    android:text="Status"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="#f00"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/borrow_status2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:text="Pending Approval"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="10dp"
                    android:textColor="#f00"
                    android:textSize="15sp" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>