<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="#fff"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/user_l1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.mikepenz.materialdrawer.view.BezelImageView
                        android:layout_width="70dp"
                        android:id="@+id/user_pix1155"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/transaction"
                        android:layout_height="70dp"/>

                    <TextView
                        android:id="@+id/tranxType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textStyle="italic"
                        android:text="Group Savings Contribution"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:id="@+id/user_l2"
                android:layout_below="@id/user_l1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/TranxAmt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:text="Tranx Amount:"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#f00"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="1dp"
                android:id="@+id/user_l3"
                android:weightSum="2"
                android:layout_below="@id/user_l2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/TranxID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:text="Tranx ID:"
                    android:gravity="start"
                    android:textColor="#f00"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/TranxStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:text="Tranx Status:"
                    android:gravity="center_horizontal"
                    android:textColor="#f00"
                    android:textSize="15sp" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/user_l4"
                android:weightSum="1"
                android:layout_below="@id/user_l3"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tranxSendingAcct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sending Acct:"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/user_l5"
                android:weightSum="1"
                android:layout_below="@id/user_l4"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tranxDestAcct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:text="Dest. Acct:"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/group_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:layout_below="@id/user_l5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="1dp"
                android:weightSum="2"
                android:layout_marginBottom="10dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingStart="1dp">

                <TextView
                    android:id="@+id/tranxMethodOfPayment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:layout_marginEnd="5dp"
                    android:text="Method of Payment"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/DateOfPayment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:layout_marginEnd="5dp"
                    android:text="Date of Payment:"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>