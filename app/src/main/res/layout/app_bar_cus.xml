<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rect_their44"
    android:layout_height="match_parent"
    style="@style/TextAppearance.AppCompat">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:background="@drawable/rect_their44"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:id="@+id/toolbar_cus"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/frameContainer_cus"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_height="match_parent"
                android:id="@+id/frameContainer_cus2"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_height="350dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="top">
                    <com.skyfishjy.library.RippleBackground
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:id="@+id/content"
                        app:rb_color="#0099CC"
                        app:rb_radius="32dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        app:rb_rippleAmount="4"
                        app:rb_duration="3000"
                        app:rb_scale="6">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/cusGreetings"
                            android:layout_width="250dp"
                            android:layout_height="100dp"
                            android:src="@drawable/good_morn1"
                            android:layout_marginTop="5dp"
                            android:foregroundGravity="center_horizontal"
                            android:backgroundTint="@color/foreground_text_color"
                            android:layout_gravity="center_horizontal"
                            android:padding="11dp"
                            android:background="@drawable/rect_their44"
                            app:civ_border_width="1dp"
                            app:civ_border_color="#ffffff"/>
                    </com.skyfishjy.library.RippleBackground>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image_cus"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_admin_user"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#ffffff"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/cus_name3"
                            android:layout_weight="1"
                            android:textAllCaps="true"
                            android:drawableTop="@drawable/ic_star"
                            android:fontFamily="@font/gilroy_medium"
                            android:layout_marginStart="17dp"
                            android:layout_marginEnd="2dp"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textColor="@color/red_brown_dark"
                            android:text="User: Ene John"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/cus_id2"
                            android:drawableTop="@drawable/ic_icon2"
                            android:layout_weight="1"
                            android:textAllCaps="true"
                            android:fontFamily="@font/gilroy_medium"
                            android:layout_marginEnd="2dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/red_brown_dark"
                            android:text="ID:094g76"/>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/acct2_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleAlpha="0.2"
                        android:background="@drawable/rect_their2a"
                        app:mrl_rippleColor="@color/blue1"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="false">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:padding="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:clickable="false">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/allCus_Super"
                                android:layout_width="0dp"
                                android:fontFamily="@font/gilroy_medium"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/ic_icon2"
                                android:text="Wallet ID:29745L"
                                android:textColor="@color/red_brown_dark"
                                android:padding="5dp"
                                android:layout_marginEnd="2dp"
                                android:textSize="15sp"
                                android:layout_gravity="center_vertical|start"
                                android:gravity="center_vertical|start"
                                android:clickable="false"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/balance_normalCus"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/ic_star"
                                android:paddingLeft="10dp"
                                android:fontFamily="@font/gilroy_medium"
                                android:text="Balance: NGN30,000"
                                android:textColor="@color/red_brown_dark"
                                android:padding="5dp"
                                android:textSize="15sp"
                                android:layout_gravity="center_vertical|end"
                                android:gravity="center_vertical|end"
                                android:clickable="false"
                                />

                        </LinearLayout>

                    </com.balysv.materialripple.MaterialRippleLayout>


                </LinearLayout>

            </FrameLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_layer_3b"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/other_BankText"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@android:color/holo_green_dark"
                android:text="Other Currencies Details :"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectAcct"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/shape_layer_3b"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="2dp"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="Select Account :"/>

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spnA"
                    android:background="@drawable/shape_layer_3b"
                    android:textAllCaps="true"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="0012897632 :"/>


            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/_BankBalance4"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/holo_green_dark"
                android:text="USD 0.00 :"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@drawable/rect_my_message"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_layer_3b"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cus_BankText"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@android:color/holo_red_dark"
                android:text="Nigerian Bank Details :"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cus_BankN"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="2dp"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="Sterling Bank :"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cus_BankNo33"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="2dp"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="0012897632 :"/>


            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cus_BankBalance4444"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@android:color/holo_red_dark"
                android:text="Naira 0.00 :"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <include layout="@layout/content_cus_home_page" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>