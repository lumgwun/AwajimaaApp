<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:scrollbarSize="5dp"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="@color/white_good"
    android:paddingLeft="1dp"
    android:paddingRight="1dp">
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_layer" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_rect14"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:weightSum="5"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_rect14"
            android:orientation="horizontal"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp">

            <TextView
                android:id="@+id/super_cusTomer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:elevation="2dp"
                android:text="Cus"
                android:padding="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/cus_image"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:paddingBottom="10dp"
                android:layout_gravity="end"
                android:background="@drawable/rect_their_message"
                android:contentDescription="@string/customer"
                android:layout_marginEnd="1dp"
                android:scaleX=".85"
                android:scaleY=".85"
                android:src="@drawable/ic_admin_user" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="1dp">

            <TextView
                android:id="@+id/customer_phone4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_marginStart="2dp"
                android:text="Phone Number:"
                android:paddingLeft="1dp"
                android:layout_weight="1"
                android:paddingRight="1dp"
                android:layout_marginEnd="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/customer_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:text="07038872109"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_below="@id/group_2"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp">

            <TextView
                android:id="@+id/customer_emailA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:paddingEnd="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:layout_marginEnd="5dp"
                android:paddingStart="1dp"
                android:text="Email Address"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/customer_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingEnd="1dp"
                android:paddingLeft="1dp"
                android:layout_weight="1"
                android:paddingRight="1dp"
                android:textAlignment="center"
                android:paddingStart="1dp"
                android:fontFamily="sans-serif"
                android:text="Customer@gmail.com"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/group_3"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp">

            <TextView
                android:id="@+id/cus_CusAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:singleLine="true"
                android:layout_marginStart="1dp"
                android:text="Address"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/cus_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="No. 4 Bori camp Rd."
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_4_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/group_4"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp">

            <TextView
                android:id="@+id/cus_officeBranch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:singleLine="true"
                android:text="Office Branch"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cus_officeB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Trans-Amadi Branch"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/group_54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_below="@id/group_4_0"
            android:paddingEnd="2dp"
            android:weightSum="2"
            android:paddingRight="2dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sendCusMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:singleLine="true"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="Send Message"
                android:background="@drawable/shape_rect14"
                android:textColor="@color/black"
                android:layout_marginRight="4dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/changeUserType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginEnd="5dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:singleLine="true"
                android:background="@drawable/shape_rect14"
                android:text="Block Customer"
                android:textColor="@color/black"
                android:textSize="17sp" />

        </LinearLayout>

    </RelativeLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#1effffff" />

</androidx.cardview.widget.CardView>