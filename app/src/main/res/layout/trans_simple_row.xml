<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rect11"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_transaction44"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="#f1f5f7"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/tx_l1"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="80dp"
                        android:id="@+id/txId44"
                        android:src="@drawable/transaction2"
                        android:layout_height="60dp"/>
                    <TextView
                        android:id="@+id/txt_tranx_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="10dp"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textStyle="bold"
                        android:text="Type"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/tx_l1_id"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_transaction_ID"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ID:0098"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_transact_Date"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="21/05/2021"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tranX_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="NGN10,000"
                        android:gravity="start"
                        android:textColor="#f00"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tranX_Method"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Method"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:textColor="#f00"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/loan_l1a"
                android:layout_below="@id/tx_l1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_Tranx_Payer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Nsikak Udeme"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/tx_l2"
                android:visibility="visible"
                android:weightSum="1"
                android:layout_below="@id/loan_l1a"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/TRANXOffice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Office Branch"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/tx_l3"
                android:weightSum="1"
                android:layout_below="@id/tx_l2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/payeeTX"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Skylight "
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/tx_l3"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/TRANX_status"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textStyle="bold"
                    android:text="Approved"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_marginEnd="10dp"
                    android:textColor="#f00"
                    android:visibility="gone"
                    android:textSize="19sp" />

            </LinearLayout>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>