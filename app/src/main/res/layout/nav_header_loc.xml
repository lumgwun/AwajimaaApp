<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_height="350dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:background="@drawable/material_drawer_circle_mask"
        android:layout_gravity="top">
        <com.scwang.wave.MultiWaveHeader
            android:id="@+id/waveHeader"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleY="1"
            app:mwhVelocity="2.5"
            app:mwhProgress="1"
            app:mwhIsRunning="true"
            app:mwhGradientAngle="360"
            app:mwhWaveHeight="50dp"
            app:mwhColorAlpha="0.2"
            app:mwhStartColor="@color/gray"
            app:mwhCloseColor="@color/white_good"
            app:mwhWaves="MultiWave"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/locGreetings"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/good_afternoon1"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:stateListAnimator="@animator/nav_default_pop_enter_anim"
            app:civ_border_width="1dp"
            app:civ_border_color="#ffffff"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_LOc"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_admin_user"
            android:layout_gravity="center"
            android:padding="5dp"
            android:stateListAnimator="@animator/nav_default_pop_enter_anim"
            app:civ_border_width="1dp"
            app:civ_border_color="#ffffff"/>
        <com.scwang.wave.MultiWaveHeader
            android:id="@+id/waveHeader66"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleY="1"
            app:mwhVelocity="2.5"
            app:mwhProgress="1"
            app:mwhIsRunning="true"
            app:mwhGradientAngle="360"
            app:mwhWaveHeight="50dp"
            app:mwhColorAlpha="0.2"
            app:mwhStartColor="@color/colorPrimaryDark"
            app:mwhCloseColor="@color/random_color_1"
            app:mwhWaves="MultiWave"/>



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/userName_loc"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="2dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="Ene John"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/loc_userID"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:layout_marginEnd="2dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="ID:094g76"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:padding="20dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="2dp">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/acct2_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/blue1"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:clickable="false">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/loc_walletID"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wallet ID:29745L"
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:layout_marginEnd="2dp"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical|start"
                        android:gravity="center_vertical|start"
                        android:clickable="false" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/loc_wallet_balance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="Balance: NGN30,000"
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical|end"
                        android:gravity="center_vertical|end"
                        android:clickable="false"
                        />

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>