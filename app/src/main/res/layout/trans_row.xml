<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rect11"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_tion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="#f1f5f7"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/tx_l1"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="80dp"
                        android:id="@+id/Id_txImg"
                        android:src="@drawable/transaction2"
                        android:layout_height="60dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/transaction_type54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="10dp"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textStyle="bold"
                        android:text="Ttype"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/tx_l1_id"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tranxfgd_ref_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ID:0098"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tranx_ref_id"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="0098"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/layout_Date"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tranx_rDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/transact_date"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="21/05/2021"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/transa_amt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Amount"
                        android:gravity="start"
                        android:textColor="#f00"
                        android:textSize="15sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/transac_amt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="NGN10,000"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:textColor="#f00"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/transac_others"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Other Info"
                        android:gravity="start"
                        android:textColor="#f00"
                        android:textSize="15sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_other_tx"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Others"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:textColor="#f00"
                        android:textSize="15sp" />

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/loan_l1a"
                android:layout_below="@id/tx_l1"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Tranx_payer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Nsikak Esco"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Tranx_sendingAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="00387645"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/tx_l2"
                android:visibility="visible"
                android:weightSum="2"
                android:layout_below="@id/loan_l1a"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tranx_des_Account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/_070390000000"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/tx_l2"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_status"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textStyle="bold"
                    android:text="Approved"
                    android:layout_marginStart="10dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_marginEnd="10dp"
                    android:textColor="#f00"
                    android:textSize="19sp" />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_tx_"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="end"
                    android:visibility="gone"
                    android:text="@string/approve"
                    android:textOn="@string/on"
                    android:textOff="@string/off"
                    android:textColor="#f00"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_dashboard_black_24dp"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:scaleType="fitXY" />


            </LinearLayout>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>