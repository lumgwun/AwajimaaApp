<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@android:id/tabhost"
    android:theme="@style/Theme.SkylightApp3"
    android:background="@drawable/rect_their_message"
    tools:context="com.skylightapp.Tellers.LoanRepaymentTab">
    <com.github.florent37.shapeofview.shapes.ArcView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="5.0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="15dp"
        app:shape_arc_cropDirection="inside"
        app:shape_arc_height="15dp"
        app:shape_arc_position="bottom">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:background="@drawable/rect6g"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:textStyle="bold"
                app:titleMarginStart="120dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                app:title="Skylight Loan Area"
                android:textAlignment="center"
                app:titleTextColor="@color/colorPrimaryDark"
                android:layout_height="100dp"/>
        </com.google.android.material.appbar.AppBarLayout>

    </com.github.florent37.shapeofview.shapes.ArcView>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="1dp">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" />
    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:layout_width="match_parent"
        android:src="@drawable/icon_tab1"
        android:id="@+id/fab_loanTab"
        android:layout_gravity="end|bottom"
        android:foregroundGravity="center_horizontal"
        android:theme="@style/ThemeOverlay.MaterialComponents"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content"/>


</TabHost>