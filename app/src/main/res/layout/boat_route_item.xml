<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_their_black">

    <com.google.android.material.payStackCard.MaterialCardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp"
        app:strokeColor="@color/red_brown_dark"
        app:rippleColor="@color/red_brown_dark"
        android:id="@+id/card_l1"
        app:checkedIcon="@mipmap/acct_balance"
        app:cardBackgroundColor="#f3f5f7"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/id_l1"
            android:padding="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/rect_their_message"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_account"
                    android:layout_width="58dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/location__start"
                    android:contentDescription="Route Image" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text=" From"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/route_from"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:text=" Route To"
                android:id="@+id/route_To"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:text=" Through"
                android:layout_marginBottom="10dp"
                android:id="@+id/route_Through"
                android:layout_marginEnd="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:text=" Country"
                android:id="@+id/route_Country"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:text=" Status"
                android:layout_marginBottom="10dp"
                android:id="@+id/route_Status"
                android:layout_marginEnd="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </com.google.android.material.payStackCard.MaterialCardView>

</RelativeLayout>