<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rect_their_message"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="#f1f5f7"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/user_l1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.mikepenz.materialdrawer.view.BezelImageView
                        android:layout_width="70dp"
                        android:id="@+id/user_pix1155"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_admin_user"
                        android:layout_height="70dp"/>

                    <TextView
                        android:id="@+id/nameOfUserS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textStyle="italic"
                        android:text="@string/john_onaye"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:id="@+id/user_l2"
                android:layout_below="@id/user_l1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/grpProfileID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:text="Profile ID:"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#f00"
                    android:textSize="15sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="1dp"
                android:id="@+id/user_l3"
                android:weightSum="1"
                android:layout_below="@id/user_l2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/grpProfileJoined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:text="Date Joined:"
                    android:gravity="start"
                    android:textColor="#f00"
                    android:textSize="15sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/user_l4"
                android:weightSum="1"
                android:layout_below="@id/user_l3"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/grpProfilePhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/user_l5"
                android:weightSum="1"
                android:layout_below="@id/user_l4"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/grpProfileStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:text="Status"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />


            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>