<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rect_their_message"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#f1f5f7"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/message_l1"
                android:paddingStart="12dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.mikepenz.materialdrawer.view.BezelImageView
                        android:layout_width="70dp"
                        android:id="@+id/profile_pix"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_admin_user"
                        android:layout_height="70dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/message_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:textStyle="italic"
                            android:text="Tittle"
                            android:paddingTop="16dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/message_tittle"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textStyle="italic"
                            android:text="About my Loan"
                            android:textAlignment="textStart"
                            android:gravity="start"
                            android:layout_marginEnd="15dp"
                            android:textColor="#f00"
                            android:textSize="19sp" />


                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="10dp"
                    android:padding="20dp"
                    android:background="@drawable/rect6g"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/message_time"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textStyle="italic"
                        android:text="Message Time:"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/dateOfCus_message"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textStyle="italic"
                        android:text="@string/_12_02_2021"
                        android:textAlignment="textStart"
                        android:gravity="start"
                        android:layout_marginEnd="15dp"
                        android:textColor="#f00"
                        android:textSize="19sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="12dp"
                android:id="@+id/message_l2"
                android:layout_below="@id/message_l1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/phoneNumberOfCelebrant"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/message3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please, i want to subscribe"
                    android:textAlignment="center"
                    android:paddingStart="16dp"
                    android:padding="20dp"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>