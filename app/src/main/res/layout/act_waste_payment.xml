<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rect_waste"
    tools:context="com.skylightapp.StateDir.WastePaymentAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <!-- =========== Title =============== -->
        <TextView
            android:id="@+id/title_Credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Tittle"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/darkSlateGray" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/comm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="credDetails"
            android:textColor="@color/darkSlateGray"
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/defCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:clickable="true"
            android:textStyle="bold"
            android:focusable="true"
            android:text="defCredit"
            android:textColor="@color/yellowgreen"
            android:textSize="16sp" />


        <!-- =========== Step 1 =============== -->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:textColor="@color/darkSlateGray"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="oneTitle"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="oneDescr"
            android:textColor="@color/darkSlateGray"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="air"
                    android:textColor="@color/darkSlateGray"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textStyle="bold"
                    android:text="airNo"
                    android:textColor="@color/darkSlateGray"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="mobiCash"
                    android:textColor="@color/darkSlateGray"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="mobiNo"
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/darkSlateGray"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- =========== Step 2 =============== -->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:textColor="@color/darkSlateGray"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="twoTitle"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="twoDescr"
            android:textColor="@color/darkSlateGray"
            android:textSize="13sp" />

        <!-- =========== Transaction ID =============== -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputTrans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/transID"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:background="@drawable/shape_layer_3b"
                android:layout_height="wrap_content"
                android:hint="transId"
                android:inputType="textShortMessage" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- =========== Deposit Amount =============== -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/transCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="transCash"
                android:padding="20dp"
                android:background="@drawable/shape_layer_3b"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- =========== Envoyer =============== -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSend"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/yellowgreen">

                <androidx.appcompat.widget.AppCompatTextView
                    android:textAlignment="inherit"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textColor="@color/whitesmoke"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"
                    android:text="send"
                    />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <!-- ================ Step 3 ============== -->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:textColor="@color/darkSlateGray"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="threeTitle"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="threeDescr"
            android:textColor="@color/darkSlateGray"
            android:textSize="13sp" />

        <!-- ================ Step 4 ============== -->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:textColor="@color/darkSlateGray"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="fourTitle"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:text="fourDescr"
            android:textColor="@color/darkSlateGray"
            android:textSize="13sp" />

    </LinearLayout>

</ScrollView>