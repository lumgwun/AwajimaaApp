<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:behavior_peekHeight="0dp"
    android:id="@+id/OTPButtomSheet"
    android:background="@drawable/rect_their_message"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/tool_bar11e"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="2dp"
        style="@style/Widget.PinPad"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/transaction2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/otpChargeMessage"
        android:layout_marginLeft="30dp"
        android:text="Enter your one time password otp"
        android:gravity="center_vertical|center_horizontal" />

    <com.google.android.material.textfield.TextInputLayout
        app:boxBackgroundColor="@null"
        android:layout_width="match_parent"
        android:id="@+id/otpTil"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:paddingLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_loan"
            android:drawableStart="@drawable/ic_loan"
            android:hint="OTP"
            android:inputType="number"
            android:drawablePadding="10dp"
            android:id="@+id/otpEv"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:id="@+id/otpButton"
        android:padding="20dp"
        android:textColor="@color/white"
        android:background="@drawable/rect6d"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="Verify OTP"
        />

</LinearLayout>