<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="55dp"
    android:layout_marginEnd="2dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/shape_layer_3b"
    android:layout_height="wrap_content"
    tools:context="com.skylightapp.Customers.NewCustomerDrawer">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:text="User Name:"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:padding="20dp"
                app:drawableStartCompat="@drawable/ic_icon2"
                android:layout_weight="1"
                android:background="@drawable/rect_new"
                android:id="@+id/cus_username"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="match_parent"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:gravity="start"
        android:onClick="getMyPacks"
        android:layout_weight="1"
        android:id="@+id/cust_PackBtn"
        android:textColor="@android:color/holo_red_dark"
        android:text="My Packs"
        android:layout_height="match_parent"/>


</androidx.appcompat.widget.LinearLayoutCompat>