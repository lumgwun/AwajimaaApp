<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/shape_rect14"
    android:orientation="vertical"
    tools:context="com.skylightapp.Admins.MoroBirthdays">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:textSize="20sp"
            android:id="@+id/actBD"
            android:padding="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/rect_their_message"
            android:textColorHint="@color/colorPrimary"
            android:text="Tomorrow BirthDays!" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/_MoroBirthDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/birthday_list_view"
        android:clipToPadding="false"
        android:scrollbars="vertical" />



</androidx.appcompat.widget.LinearLayoutCompat>