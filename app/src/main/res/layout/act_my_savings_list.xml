<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f5f7"
    android:theme="@style/NoActionBarTheme"
    tools:context="com.skylightapp.Customers.MySavingsListAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_my_message"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="10dp"
            android:text="My Daily Savings"
            android:id="@+id/myCusS"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textSize="19sp" />
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_gravity="bottom|end"
            android:id="@+id/savings_fab2"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_MySavings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginTop="10dp"
            android:scrollbars="vertical" />
    </LinearLayout>

</ScrollView>