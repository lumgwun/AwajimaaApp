<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:scrollbarSize="30dp"
    app:cardCornerRadius="25dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/white_good"
    android:paddingLeft="1dp"
    android:paddingRight="1dp">
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/rect6g" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_rect14"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/sky_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:background="@drawable/shape_rect14"
            android:orientation="horizontal"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/sky_image"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_gravity="start"
                android:foregroundGravity="right"
                android:background="@drawable/shape_layer_1a"
                android:contentDescription="@string/app_name"
                android:layout_marginEnd="10dp"
                android:paddingEnd="1dp"
                android:layout_weight="1"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingStart="1dp"
                android:scaleX=".85"
                android:scaleY=".85"
                android:src="@drawable/skylight_2" />


            <TextView
                android:id="@+id/sky_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:elevation="2dp"
                android:layout_weight="1"
                android:text="Skylight Cooperative &amp; Thrift\n Acct Statement"
                android:gravity="center"
                android:textStyle="italic"
                android:paddingEnd="10dp"
                android:padding="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:layout_marginEnd="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:layout_below="@+id/sky_1"
            android:background="@drawable/shape_rect14"
            android:orientation="horizontal"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp">

            <TextView
                android:id="@+id/statement_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:layout_weight="1"
                android:text="Customer: Roma Elias J"
                android:gravity="center"
                android:textStyle="italic"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:layout_marginEnd="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/statement_image"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_gravity="end"
                android:foregroundGravity="right"
                android:background="@drawable/shape_layer_1a"
                android:contentDescription="@string/customer"
                android:layout_marginEnd="10dp"
                android:paddingEnd="1dp"
                android:layout_weight="1"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingStart="1dp"
                android:scaleX=".85"
                android:scaleY=".85"
                android:src="@drawable/ic_admin_user" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_2d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="1dp">

            <TextView
                android:id="@+id/wallet_ID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_marginStart="2dp"
                android:text="Wallet No:927369"
                android:paddingLeft="1dp"
                android:layout_weight="1"
                android:paddingRight="1dp"
                android:layout_marginEnd="5dp"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/amtStatement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginEnd="2dp"
                android:text="Wallet Balance :N30876543"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_below="@id/group_2d"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp">

            <TextView
                android:id="@+id/So_No"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:paddingEnd="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:layout_marginEnd="5dp"
                android:paddingStart="1dp"
                android:text="SO Acct ID: 096439L"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/SoBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingEnd="1dp"
                android:paddingLeft="1dp"
                android:layout_weight="1"
                android:paddingRight="1dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingStart="1dp"
                android:fontFamily="sans-serif"
                android:text="SO Balance:N3980,987"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_3"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="1dp">

            <TextView
                android:id="@+id/dateStatement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Date:22/02/2022"
                android:paddingLeft="1dp"
                android:layout_weight="1"
                android:paddingRight="1dp"
                android:layout_marginEnd="5dp"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/noOfSavingsStatement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:text="No. of Savings:2098"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/group_2"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp">

            <TextView
                android:id="@+id/cashStatement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_marginStart="1dp"
                android:text="Cash Deposits:N6,3900"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bankDeposit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Bank deposits: N6,3900"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_6_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/group_4"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp">

            <TextView
                android:id="@+id/statementGrpSavings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:singleLine="true"
                android:text="Group Savings: 6, N67,000"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/grpSavingsBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="GrpS Balance: 2, N20,000"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_4_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/group_6_0"
            android:paddingEnd="1dp"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp">

            <TextView
                android:id="@+id/statementWithdrawals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:singleLine="true"
                android:text="Withdrawals:6,  N67,000"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loansStatement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Loans: 2, N20,000"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#1effffff" />

</androidx.cardview.widget.CardView>