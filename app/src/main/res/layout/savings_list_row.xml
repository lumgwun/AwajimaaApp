<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_rect_3"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/p_1"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/saving_icon"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="5dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/savings"
                    android:scaleType="fitXY"
                    android:contentDescription="Savings" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/package_ID"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:textStyle="bold"
                        android:paddingStart="8dp"
                        android:text="Package ID"
                        android:paddingEnd="16dp"
                        android:paddingTop="16dp"
                        android:textColor="#111"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/saving_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="Savings ID"
                        android:textStyle="bold"
                        android:paddingStart="8dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/saving_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="Savings Code"
                        android:textStyle="bold"
                        android:paddingStart="8dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_1"
                android:id="@+id/p_01"
                android:weightSum="3"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/savings_date3"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:text="Date: 23/04/2021"
                    android:layout_weight="1"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:textColor="#111"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/saving_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Savings Amount:"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="16dp"
                    android:textColor="#111"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/savings_count2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:textAlignment="center"
                    android:text="Savings Count"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/p_2"
                android:layout_below="@id/p_01"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/no_of_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textStyle="bold"
                    android:text="No of days"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingEnd="8dp"
                    android:textColor="#111"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/total_paid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textStyle="bold"
                    android:text="Total"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingEnd="8dp"
                    android:textColor="#111"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/p_2"
                android:id="@+id/p_3"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/amount_remaining1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textStyle="bold"
                        android:text="Amount Rem."
                        android:layout_marginBottom="5dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_weight="1"
                        android:textColor="#111"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/days_rem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textStyle="bold"
                        android:text="Days Rem."
                        android:layout_weight="1"
                        android:paddingStart="8dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="#111"
                        android:textSize="15sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/status2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:paddingStart="5dp"
                        android:text=" Status"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:paddingStart="5dp"
                        android:text=" Method"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/saving_doc"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="5dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/transaction2"
                    android:scaleType="fitXY"
                    android:contentDescription="Savings" />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>