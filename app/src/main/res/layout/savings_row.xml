<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@drawable/rect10"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginEnd="1dp"
            android:paddingEnd="1dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="50dp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:src="@drawable/savings"
                        android:id="@+id/imgSavings"
                        android:layout_height="100dp"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Savings ID:12052021L"
                            android:id="@+id/savings_ID"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Savings Date:12/05/2021"
                            android:id="@+id/savings_dater"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Status Date:Verified"
                            android:id="@+id/statusSavings"
                            android:layout_weight="1"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"/>


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:text="Savings No:"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_marginEnd="3dp"
                        android:textSize="15sp"
                        android:id="@+id/number_No"
                        android:layout_height="wrap_content"/>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:text="No. of Days: 5"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_marginEnd="3dp"
                        android:textSize="15sp"
                        android:id="@+id/number_day21"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="0dp"
                        android:text="Total : NGN 15,000"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:id="@+id/totalsaving2s"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="Amount Rem : NGN20,000"
                        android:layout_marginEnd="3dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:id="@+id/amount_rem24"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Days Rem: 5"
                        android:id="@+id/daysRem24"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="Payment Method"
                        android:layout_marginEnd="3dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:id="@+id/paymentMethod24"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:text="Payment Code: SKY982074"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:id="@+id/paymentCode24"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/transaction2"
                    android:id="@+id/paymentDoc"
                    android:layout_height="100dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>