<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rect11"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_payout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="#f1f5f7"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/tx_l1"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="80dp"
                        android:id="@+id/payoutICon"
                        android:src="@drawable/verified_savings"
                        android:layout_height="60dp"/>
                    <TextView
                        android:id="@+id/txt_payout_Cus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="10dp"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textStyle="bold"
                        android:text="Customer"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/tx_l1_id"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/payout_ref_No45"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Payout Ref. ID:"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/payout_ref_No"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="2346789"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_pt_id456"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Transaction ID:"
                        android:gravity="start"
                        android:textColor="#f00"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txt_pt_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="092356:"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:textColor="#f00"
                        android:textSize="17sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/loan_l1a"
                android:layout_below="@id/tx_l1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/payout_AmountGH"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Requested Amount"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/payout_Amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="N 456,0987"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/tx_l2"
                android:visibility="visible"
                android:weightSum="2"
                android:layout_below="@id/loan_l1a"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/payout_date234"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Payout Date"
                    android:textColor="#f00"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/payout_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="25/04/2022"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="#f00"
                    android:textSize="17sp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/tx_l3"
                android:weightSum="2"
                android:layout_below="@id/tx_l2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/payout_Bank7689"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:gravity="start"
                    android:text="Payout Bank"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/payout_Bank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sterling Bank Plc"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/tx_l4"
                android:weightSum="2"
                android:layout_below="@id/tx_l3"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/payoutBankName567y"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bank Account Name"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="#f00"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/payoutBankName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="1dp"
                    android:text="Ibate Naomi"
                    android:textColor="#f00"
                    android:textSize="17sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/tx_ll3908"
                android:weightSum="2"
                android:layout_below="@id/tx_l4"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/payoutAc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:gravity="start"
                    android:text="Bank Account Number"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/payoutAcctNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1023456672"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/tx_ll3"
                android:weightSum="2"
                android:layout_below="@id/tx_ll3908"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/payoutP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="10dp"
                    android:gravity="start"
                    android:text="Purpose"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#f00"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/payoutPurpose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Business:"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="#f00"
                    android:textSize="17sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/tx_ll3"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/payout_authorizer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Authorizer : John Nnamehn"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/payout_Status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Approved"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </LinearLayout>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>