<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@android:id/tabhost"
    android:background="@drawable/rect_their_message"
    tools:context="com.skylightapp.Inventory.SuperInvTab">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:id="@+id/app_bar_Super"
            android:layout_alignParentTop="true"
            android:background="@drawable/rect_their_message"
            android:layout_height="150dp">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                app:title="Super Admin Inventory"
                android:id="@+id/web_toolbar"
                app:titleTextColor="#f00"
                android:layout_height="wrap_content"/>
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_Superdmin_Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="2dp"
                app:srcCompat="@android:drawable/ic_dialog_email" />
        </com.google.android.material.appbar.AppBarLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" />
    </LinearLayout>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_super_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="12dp"
        app:srcCompat="@android:drawable/ic_dialog_email" />


</TabHost>