<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rect_their_message"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:focusable="true"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/p_1"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/st_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_code"
                    android:scaleType="fitXY"
                    android:contentDescription="Skylight ST List" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/stID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:paddingStart="8dp"
                        android:text="ST ID"
                        android:gravity="right"
                        android:paddingEnd="5dp"
                        android:paddingTop="6dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/sT_Item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="Item Name"
                        android:textStyle="bold"
                        android:paddingStart="8dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_1"
                android:id="@+id/p_01"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/stDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:text="Date: 23/04/2021"
                    android:layout_weight="1"
                    android:paddingEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_01"
                android:id="@+id/p_11011"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/st_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Quantity:"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/p_11011"
                android:id="@+id/sc_from"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/st_transferer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transferer"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="5dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/sc_from"
                android:id="@+id/sc_To"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/st_receiver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Receiver:"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="5dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/p_2"
                android:weightSum="1"
                android:layout_below="@id/sc_To"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/st_from_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="From Branch to Teller"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="5dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/p_scCode"
                android:weightSum="1"
                android:layout_below="@id/p_2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/st_Code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Code"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="5dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/p_scCode"
                android:id="@+id/p_3"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/st_Status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:paddingStart="5dp"
                        android:layout_gravity="right"
                        android:layout_marginBottom="10dp"
                        android:text="ST. Status"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textStyle="italic"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>