<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_rect14">
    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape_layer_3"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relayoutVote"
                android:orientation="horizontal"
                android:weightSum="2">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageAwardA"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_red1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relayouta"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TittleAwardID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:paddingLeft="5dp"
                        android:text="Award ID:"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="italic|bold"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white_good"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/TittleAwardA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:paddingLeft="5dp"
                        android:text="Award Tittle"
                        android:textStyle="italic|bold"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white_good"
                        android:textSize="16sp" />


                </LinearLayout>

            </LinearLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_below="@id/relayoutVote"
                android:orientation="horizontal"
                android:id="@+id/relayoutAward1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/AwardDescript"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Award Description:"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white_good"
                    android:padding="10dp"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_below="@id/relayoutAward1"
                android:orientation="horizontal"
                android:id="@+id/relayoutAwardDate"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/awardDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Award Date:21/12/2021"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white_good"
                    android:padding="10dp"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/awardStartDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Start Date:12/09/2021"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white_good"
                    android:padding="10dp"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_below="@id/relayoutAwardDate"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/awardStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Status:In progress"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white_good"
                    android:padding="10dp"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/awardEndDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="End Date:12/01/2022"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white_good"
                    android:padding="10dp"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>