<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:theme="@style/NoActionBar"
    tools:context="com.skylightapp.MyGrpSavingsUsers">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:text="No Group Savings"
        android:visibility="gone"
        android:background="@drawable/rect_their_message"
        android:textAlignment="center"
        android:id="@+id/noGrpSavingsUsers"
        android:padding="20dp"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/recycler_GrpSUsers"
        android:layout_marginBottom="10dp"
        tools:listitem="@layout/grp_profile_row"
        android:scrollbars = "horizontal" />

</androidx.appcompat.widget.LinearLayoutCompat>