<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@android:id/tabhost"
    tools:actionBarNavMode="standard"
    android:theme="@style/Theme.SkylightAppTab"
    android:background="@drawable/rect_their_message"
    tools:context="com.skylightapp.Markets.MarketTab">
    <include layout="@layout/tool_bar11fb"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="1dp">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" />
    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:layout_width="match_parent"
        android:src="@drawable/ic_loc_searching"
        android:id="@+id/fab_market"
        app:fab_label="Customer"
        app:fab_colorNormal="@color/GREEN_LIGHT"
        android:layout_gravity="end|bottom"
        android:foregroundGravity="center_horizontal"
        android:theme="@style/ThemeOverlay.MaterialComponents"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="320dp"
        android:layout_height="wrap_content"/>


</TabHost>