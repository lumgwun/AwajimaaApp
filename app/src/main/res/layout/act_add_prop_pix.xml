<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RealEstate.AddPropPixActivity">
    <com.smarteist.autoimageslider.SliderView
        android:layout_width="match_parent"
        android:id="@+id/sliderProperty"
        android:layout_height="200dp"
        android:background="@drawable/shape_layer_3"
        android:layout_centerInParent="true"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorEnabled="true"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:text="Property ID: 093618"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:id="@+id/idProp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:text="Property Admin: 890019"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:id="@+id/idOwner"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/photoProp"
        android:layout_marginBottom="10dp"
        android:layout_height="100dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:hint="Picture Tittle"
        android:id="@+id/propertyTittle"
        android:textColorHint="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:text="Select New Property Picture"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:onClick="selectPropPicture"
        android:background="@drawable/shape_layer_3"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/white_good"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:text="Register New Picture"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:onClick="SubmitNewPicture"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white_good"
        android:background="@drawable/shape_layer_3"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:text="Powered By The Lumgwun Solutiond Group"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:layout_gravity="bottom"
        android:textStyle="italic"
        android:layout_height="wrap_content"/>



</androidx.appcompat.widget.LinearLayoutCompat>