<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.SkylightApp3"
    android:background="@drawable/shape_layer_2a"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/rect6b"
        android:backgroundTint="@color/gray_light_pro" />


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:scrollIndicators="left"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/rect_their_message"
                android:src="@drawable/lsgroup_logo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We have daily savings for Groups and Individuals"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gilroy_black"
                android:background="@null"
                android:gravity="center_horizontal"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:padding="20dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/sky11"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="500dp"
                    app:strokeColor="@color/red_brown_dark"
                    app:rippleColor="@color/red_brown_dark"
                    android:id="@+id/card_l1"
                    app:cardBackgroundColor="@color/white"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/switcher244"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="25dp"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/gilroy_bold"
                        android:textColor="@android:color/holo_orange_dark"
                        android:gravity="center_horizontal"
                        android:text="You can manage Your Customers, Partners, Regulators, daily icome, expenditures, deposits, and transactions,and Businesses can send messages, and hold Live Streaming sessions"
                        android:background="@drawable/rect_their_message"
                        android:src="@drawable/skylight_madam" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="500dp"
                    app:strokeColor="@color/red_brown_dark"
                    app:rippleColor="@color/red_brown_dark"
                    android:id="@+id/card_l009871"
                    app:cardBackgroundColor="@color/white"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView2"
                        android:layout_below="@+id/textView2"
                        android:fontFamily="monospace"
                        android:textSize="17sp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rect_their4c"
                        android:foregroundGravity="center_horizontal"
                        android:text="All-in-one Information management System for Inventory and Stocks Management and distribution of Agric supports to Farmers across different regions. The Field Tellers can send in the day's and Emergency Report report to the Business Office, and ,Admin can see real time updates,and manage Inventory"
                        android:textAlignment="center"
                        android:padding="50dp"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/holo_red_dark"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/switcher2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="25dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="center_horizontal"
                    android:text="Awajima,The Future is Here!"
                    android:background="@drawable/rect_their_message"
                    android:src="@drawable/lsgroup1" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Developed by Lumgwun Solutions Group."
                    android:gravity="bottom"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_rect14"
                    android:textColor="@android:color/white"
                    android:padding="20dp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>