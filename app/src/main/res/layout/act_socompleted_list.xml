<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:theme="@style/NoActionBar"
    tools:context="com.skylightapp.Admins.SOCompletedList">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingTop="10dp"
            android:text="Loan"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/loanTxt"
            android:layout_marginBottom="12dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/recycler_viewSOCompleted"
        tools:itemCount="@android:integer/status_bar_notification_info_maxnum"
        android:layout_marginBottom="10dp"
        tools:listitem="@layout/so_list_row"
        android:scrollbars = "horizontal" />

</androidx.appcompat.widget.LinearLayoutCompat>