<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_new"
    tools:context="com.skylightapp.BizLogisticsOffice">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:id="@+id/logistics_C"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/lAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:fabCradleMargin="5dp"
            app:fabCradleRoundedCornerRadius="10dp"
            app:fabCradleVerticalOffset="10dp">

            <com.ismaeldivita.chipnavigation.ChipNavigationBar
                android:id="@+id/nav_bar_logistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_gravity="center_horizontal"
                android:background="#fff"
                android:layout_above="@id/logistics_C"
                android:fadingEdge="horizontal"
                app:cnb_orientationMode="horizontal"
                app:cnb_addBottomInset="false"
                app:cnb_addLeftInset="true"
                app:cnb_addRightInset="false"
                app:cnb_addTopInset="false"
                app:cnb_unselectedColor="@color/green_dark"
                app:cnb_badgeColor="@color/dark_and_red"
                app:cnb_radius="8dp"
                app:cnb_iconSize="24dp"
                app:cnb_menuResource="@menu/logistics_bottom" />

        </com.google.android.material.bottomappbar.BottomAppBar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</RelativeLayout>