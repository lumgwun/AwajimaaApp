<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_their_black">

    <com.google.android.material.payStackCard.MaterialCardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp"
        app:strokeColor="@color/red_brown_dark"
        app:rippleColor="@color/red_brown_dark"
        android:id="@+id/card_l1"
        app:checkedIcon="@mipmap/acct_balance"
        app:cardBackgroundColor="#f3f5f7"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/id_l1"
            android:padding="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/rect_their_message"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:text=" Currency"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:id="@+id/deal_currency"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="0dp"
                    android:text=" Status"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:id="@+id/deal_status"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:text=" Deal Title Name"
                android:id="@+id/deal_tittle"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text=" Deal Acct No."
                android:layout_marginBottom="10dp"
                android:id="@+id/account_deal_No"
                android:layout_marginEnd="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text=" Start Date."
                android:id="@+id/date_deal"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text=" Balance."
                android:layout_marginBottom="10dp"
                android:id="@+id/aDeal_balance2"
                android:layout_marginEnd="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </com.google.android.material.payStackCard.MaterialCardView>


</RelativeLayout>