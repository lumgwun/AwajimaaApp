<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:context="com.skylightapp.MapAndLoc.DisplayLocAct"
    tools:showIn="@layout/act_report_scene">
    <ImageView
        android:id="@+id/awa_close_Img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:foregroundGravity="right"
        android:layout_margin="16dp"
        android:background="@drawable/event_rect"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_close"
        android:text="Close"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/pickUpDropLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ImageView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/status_label"
        android:text="@string/status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/report_loc_update"
        android:text="Number of Updates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/response_Counts"
        android:text="Response Counts:"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />


    <fragment
        android:id="@+id/map_Details"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/time_cp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />



</androidx.appcompat.widget.LinearLayoutCompat>